    font-size: 0.8rem;
    font-weight: 600;
    color: #10b981;
  }

  .command-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
    border-bottom: 1px solid color-mix(in srgb, currentColor 5%, transparent);
  }

  .command-row:last-child { border-bottom: none; }

  .command-row code {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
    white-space: nowrap;
  }

  .command-row span {
    font-size: 0.75rem;
    opacity: 0.65;
  }

