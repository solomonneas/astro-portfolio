  <!-- Tech Stack -->
  <h2>// Tech Stack</h2>
  <p class="section-intro">React application with a custom shell implementation running on xterm.js:</p>
  <div class="stack-grid">
    {stackComponents.map((comp, i) => (
      <div class="stack-card" style={`--accent: ${comp.color}; --delay: ${i * 0.1}s`}>
        <div class="stack-header">
          <span class="stack-indicator"></span>
          <span class="stack-name">{comp.name}</span>
        </div>
        <div class="stack-role">{comp.role}</div>
        <p class="stack-purpose">{comp.purpose}</p>
      </div>
    ))}
  </div>

  <!-- Available Commands -->
  <h2>// Available Commands</h2>
  <div class="commands-grid">
    <div class="command-group">
      <div class="command-group-title">Navigation</div>
      <div class="command-row"><code>ls [-l] [-a] [path]</code><span>List directory contents</span></div>
      <div class="command-row"><code>cd [path]</code><span>Change directory</span></div>
      <div class="command-row"><code>pwd</code><span>Print working directory</span></div>
      <div class="command-row"><code>tree [path]</code><span>Display directory tree</span></div>
    </div>
    <div class="command-group">
      <div class="command-group-title">File Operations</div>
      <div class="command-row"><code>cat &lt;file&gt;</code><span>Display file contents</span></div>
      <div class="command-row"><code>grep &lt;pattern&gt; [path]</code><span>Search for patterns</span></div>
      <div class="command-row"><code>head / tail</code><span>View file start/end</span></div>
    </div>
    <div class="command-group">
      <div class="command-group-title">Information</div>
      <div class="command-row"><code>help</code><span>Show all commands</span></div>
      <div class="command-row"><code>whoami</code><span>Display user info</span></div>
      <div class="command-row"><code>history</code><span>Command history</span></div>
      <div class="command-row"><code>man &lt;cmd&gt;</code><span>Command manual</span></div>
    </div>
    <div class="command-group">
      <div class="command-group-title">Easter Eggs</div>
      <div class="command-row"><code>???</code><span>Try sudo, cowsay, fortune, matrix...</span></div>
      <div class="command-row"><code>???</code><span>12+ hidden commands to find</span></div>
      <div class="command-row"><code>???</code><span>Explore the dotfiles</span></div>
    </div>
  </div>

  <!-- Technical Highlights -->
  <h2>// Technical Highlights</h2>
  <div class="highlights-grid">
    {highlights.map((item, i) => (
      <div class="highlight-card" style={`--delay: ${i * 0.1}s`}>
        <div class="highlight-header">
          <span class="highlight-category">{item.category}</span>
          <span class="highlight-title">{item.title}</span>
        </div>
        <div class="highlight-body">
          <div class="highlight-row">
            <span class="row-label">Problem:</span>
            <span class="row-value">{item.scenario}</span>
          </div>
          <div class="highlight-row">
            <span class="row-label">Solution:</span>
            <span class="row-value">{item.solution}</span>
          </div>
          <div class="highlight-row impact">
            <span class="row-label">Result:</span>
            <span class="row-value">{item.impact}</span>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Skills -->
  <h2>// Skills Demonstrated</h2>
  <div class="skills-grid">
    {skills.map((skill) => (
      <div class="skill-card">
        <div class="skill-header">
          <span class="skill-name">{skill.name}</span>
        </div>
        <ul class="skill-items">
          {skill.items.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>

  <!-- Status -->
  <h2>// Project Status</h2>
  <div class="status-block">
    <div class="status-indicator complete">
      <div class="status-pulse"></div>
      <span>Complete</span>
    </div>
    <ul class="status-list">
      <li><span class="check">&#10003;</span> Full shell with line editing and history</li>
      <li><span class="check">&#10003;</span> Tab completion for commands and paths</li>
      <li><span class="check">&#10003;</span> Virtual filesystem with all portfolio content</li>
      <li><span class="check">&#10003;</span> URL-based routing to shell commands</li>
      <li><span class="check">&#10003;</span> Multiple color themes</li>
      <li><span class="check">&#10003;</span> 12+ easter eggs and hidden commands</li>
      <li><span class="check">&#10003;</span> Responsive terminal with FitAddon</li>
      <li><span class="check">&#10003;</span> Deployed to termfolio.solomonneas.dev</li>
    </ul>
  </div>
</ProjectLayout>

<style>
  .section-intro { opacity: 0.85; margin-bottom: 1.5rem; }

  .stack-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .stack-card {
    background: color-mix(in srgb, currentColor 3%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    border-left: 3px solid var(--accent);
    border-radius: 4px;
    padding: 1rem;
    animation: fadeSlideIn 0.5s ease-out both;
    animation-delay: var(--delay);
  }

  @keyframes fadeSlideIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .stack-header { display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem; }
