  {
    letter: "P",
    name: "Projects",
    description: "Active initiatives with deadlines and deliverables",
    color: "#10b981"
  },
  {
    letter: "A",
    name: "Areas",
    description: "Ongoing responsibilities and domains of life",
    color: "#3b82f6"
  },
  {
    letter: "R",
    name: "Resources",
    description: "Reference material, topics of interest, learning notes",
    color: "#f59e0b"
  },
  {
    letter: "A",
    name: "Archive",
    description: "Completed projects and inactive items",
    color: "#6b7280"
  },
];

// Workflow components
const workflow = [
  {
    step: "Capture",
    description: "Quick notes go to Inbox folder without friction",
    detail: "No pressure to organize immediately"
  },
  {
    step: "Process",
    description: "Dedicated organization days to sort inbox",
    detail: "Add hashtags, links, move to proper folders"
  },
  {
    step: "Connect",
    description: "Link notes to MASTER FILES and related concepts",
    detail: "Build the neural network of knowledge"
  },
  {
    step: "Review",
    description: "Graph view reveals unexpected connections",
    detail: "Concepts surface when you need them"
  },
];

// Plugins used
const plugins = [
  {
    name: "Dataview",
    purpose: "Query notes like a database, create dynamic lists and tables",
    status: "Active"
  },
  {
    name: "Templater",
    purpose: "Templates for daily notes, intelligence reports, meeting notes",
    status: "Active"
  },
];

// Lessons learned
const lessons = [
