  { issue: "Bulky Files", description: "Notebooks grew unwieldy and slow to load" },
  { issue: "Clunky Interface", description: "Too many clicks to navigate, poor keyboard shortcuts" },
  { issue: "Sync Failures", description: "School OneDrive had constant sync conflicts across devices" },
  { issue: "Cloud Lock-in", description: "Personal OneDrive couldn't sync locally, forced cloud-only access" },
