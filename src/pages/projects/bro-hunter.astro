    gap: 0.15rem;
  }

  .github-label {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
    font-weight: 600;
    color: #6e5494;
  }

  .github-desc {
    font-size: 0.75rem;
    opacity: 0.6;
