---
import Layout from "../layouts/Layout.astro";
import StatusLight from "../components/StatusLight.astro";

// Featured projects (top showcase for recruiters)
const featuredProjects = [
    ],
  },
];

// Count total projects
const allIdentifiers = new Set([
  ...featuredProjects.map(p => p.identifier),
  ...categories.flatMap(cat => cat.projects.map(p => p.identifier)),
]);
const totalProjects = allIdentifiers.size;
---

<Layout pageTitle="Projects">
  <section class="projects-terminal">
    <header class="terminal-header">
      <div class="header-left">
        <StatusLight status="ongoing" />
        <span class="status-text">MONITORING</span>
      </div>
      <h1>$ tail -f /var/log/projects.log</h1>
    </header>

    <div class="terminal-body">
      <p class="log-meta">
        [+] Displaying {totalProjects} project entries | Last updated: {new Date().toISOString().split("T")[0]}
      </p>

      <!-- Featured Projects -->
      <div class="featured-section">
        <h2 class="section-header">
          <span class="section-icon">⭐</span>
          <span>// Featured Projects</span>
        </h2>
        <div class="featured-grid">
          {featuredProjects.map((project) => (
            <a href={project.href} class="featured-card">
              <div class={`featured-highlight ${project.highlight.includes('$') ? 'savings' : ''}`}>{project.highlight}</div>
              <div class="featured-header">
                <span class="featured-identifier">{project.identifier.replace(/_/g, " ")}</span>
                <StatusLight status={project.status} />
              </div>
              <p class="featured-description">{project.description}</p>
              <div class="featured-tech">
                {project.techStack.slice(0, 4).map((tech) => (
                  <span class="tech-pill">{tech}</span>
                ))}
              </div>
              <div class="featured-meta">
                <span class="featured-origin">{project.origin}</span>
                <span class="featured-date">{project.date}</span>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Categorized Projects -->
      {categories.map((category) => (
        <div class="category-section">
          <h2 class="section-header">
            <span class="section-icon">{category.icon}</span>
            <span>// {category.name}</span>
          </h2>
          <div class="log-entries">
            {category.projects.map((project) => (
              <article class="log-entry">
                <div class="entry-header">
                  <span class="entry-date">[{project.date}]</span>
                  <span class="entry-divider">|</span>
                  <span class="entry-status">
                    {project.status === "ongoing" ? "ONGOING" : "COMPLETED"}
                    <StatusLight status={project.status} />
                  </span>
                </div>

                <div class="entry-body">
                  <div class="entry-field">
                    <span class="field-label">&gt;&gt; IDENTIFIER:</span>
                    {project.href ? (
                      <a href={project.href} class="field-value identifier-link">
                        {project.identifier}
                      </a>
                    ) : (
                      <span class="field-value identifier">{project.identifier}</span>
                    )}
                  </div>

                  <div class="entry-field">
                    <span class="field-label">&gt;&gt; ORIGIN:</span>
                    <span class="field-value">{project.origin}</span>
                  </div>

                  <div class="entry-field">
                    <span class="field-label">&gt;&gt; DESCRIPTION:</span>
                    <span class="field-value description">{project.description}</span>
                  </div>

                  <div class="entry-field tech-row">
                    <span class="field-label">&gt;&gt; TECH_STACK:</span>
                    <div class="tech-badges">
                      {project.techStack.map((tech) => (
                        <span class="tech-badge">[{tech}]</span>
                      ))}
                    </div>
                  </div>

                  {project.href && (
                    <div class="entry-field case-study">
                      <span class="field-label">~</span>
                      <a href={project.href} class="case-study-link">
                        &gt; View Case Study
                      </a>
                    </div>
                  )}
                </div>
              </article>
            ))}
          </div>
        </div>
      ))}

      <!-- Navigation -->
      <div class="nav-section">
        <p class="nav-comment">// Continue exploring</p>
        <div class="nav-links">
          <a href="/experience" class="nav-link">$ cd /experience</a>
          <a href="/hire" class="nav-link">$ cd /hire</a>
          <a href="/blog" class="nav-link">$ cd /blog</a>
        </div>
      </div>

      <!-- Footer -->
      <div class="terminal-footer">
        <span class="cursor-blink">█</span> EOF
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Terminal Wrapper */
  .projects-terminal {
    font-family: "IBM Plex Mono", monospace;
    max-width: 52rem;
    margin: 0 auto;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-bottom: none;
    border-radius: 6px 6px 0 0;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .status-text {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #10b981;
  }

  .terminal-header h1 {
    font-size: 1rem;
    font-weight: 500;
    margin: 0;
    opacity: 0.8;
  }

  .terminal-body {
    padding: 1.5rem 1.25rem 1.25rem;
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-top: none;
    border-radius: 0 0 6px 6px;
    background: color-mix(in srgb, currentColor 2%, transparent);
  }

  .log-meta {
    font-size: 0.75rem;
    opacity: 0.5;
    margin: 0 0 1.5rem 0;
  }

  /* Section Headers */
  .section-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed color-mix(in srgb, currentColor 15%, transparent);
  }

  .section-icon {
    font-size: 1.1rem;
  }

  /* Featured Section */
  .featured-section {
    margin-bottom: 2.5rem;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }

  .featured-card {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    background: color-mix(in srgb, currentColor 4%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent);
    border-radius: 6px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .featured-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #10b981, #3b82f6);
    opacity: 0.8;
  }

  .featured-card:hover {
    background: color-mix(in srgb, currentColor 8%, transparent);
    border-color: color-mix(in srgb, currentColor 25%, transparent);
    transform: translateY(-2px);
  }

  .featured-highlight {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #10b981;
    margin-bottom: 0.75rem;
  }

  .featured-highlight.savings {
    color: #f59e0b;
    background: color-mix(in srgb, #f59e0b 15%, transparent);
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    display: inline-block;
  }

  .featured-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .featured-identifier {
    font-weight: 700;
    font-size: 1rem;
    line-height: 1.3;
  }

  .featured-description {
    font-size: 0.8rem;
    line-height: 1.5;
    opacity: 0.8;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .featured-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-bottom: 1rem;
  }

  .tech-pill {
    font-size: 0.65rem;
    padding: 0.2rem 0.5rem;
    background: color-mix(in srgb, #10b981 12%, transparent);
    border: 1px solid color-mix(in srgb, #10b981 25%, transparent);
    border-radius: 3px;
    color: #10b981;
  }

  .featured-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.7rem;
    opacity: 0.6;
    padding-top: 0.75rem;
    border-top: 1px solid color-mix(in srgb, currentColor 10%, transparent);
  }

  /* Category Section */
  .category-section {
    margin-bottom: 2rem;
  }

  /* Log entries container */
  .log-entries {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Individual log entry */
  .log-entry {
    padding: 1.25rem;
    background: color-mix(in srgb, currentColor 3%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    border-radius: 4px;
    margin-bottom: 1rem;
    transition:
      background 0.2s ease,
      border-color 0.2s ease;
  }

  .log-entry:hover {
    background: color-mix(in srgb, currentColor 7%, transparent);
    border-color: color-mix(in srgb, currentColor 20%, transparent);
  }

  /* Entry header with date and status */
  .entry-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    flex-wrap: wrap;
  }

  .entry-date {
    font-weight: 600;
    color: #10b981;
  }

  .entry-divider {
    opacity: 0.4;
  }

  .entry-status {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  /* Entry body with fields */
  .entry-body {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .entry-field {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 0.8rem;
    line-height: 1.5;
  }

  .field-label {
    color: #10b981;
    font-weight: 600;
    flex-shrink: 0;
    min-width: 120px;
  }

  .field-value {
    opacity: 0.85;
  }

  .field-value.identifier {
    color: #10b981;
    font-weight: 700;
    font-size: 1.1em;
    letter-spacing: 0.02em;
    opacity: 0.7;
  }

  .field-value.description {
    max-width: 60ch;
  }

  .identifier-link,
  .identifier-link:visited {
    color: #10b981;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1em;
    letter-spacing: 0.02em;
    transition: all 0.2s ease;
    padding: 0.15rem 0.4rem;
    margin: -0.15rem -0.4rem;
    border-radius: 3px;
    background: transparent;
    border-bottom: none;
  }

  .identifier-link:hover {
    background: color-mix(in srgb, #10b981 15%, transparent);
    color: #34d399;
    text-shadow: 0 0 8px rgba(16, 185, 129, 0.3);
    border-bottom: none;
  }

  /* Tech stack badges */
  .tech-row {
    flex-wrap: wrap;
  }

  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-badge {
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-radius: 2px;
    opacity: 0.7;
  }

  /* Case study link */
  .case-study {
    margin-top: 0.5rem;
  }

  .case-study-link,
  .case-study-link:visited {
    color: currentColor;
    text-decoration: none;
    opacity: 0.6;
    font-size: 0.75rem;
    border-bottom: none;
    background: transparent;
    transition:
      opacity 0.2s ease,
      color 0.2s ease;
  }

  .case-study-link:hover {
    opacity: 1;
    color: #10b981;
    background: transparent;
    border-bottom: none;
  }

  /* Divider line */
  .entry-divider-line {
    display: none;
  }

  /* Navigation */
  .nav-section {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px dashed color-mix(in srgb, currentColor 15%, transparent);
  }

  .nav-comment {
    font-size: 0.75rem;
    opacity: 0.5;
    margin: 0 0 0.75rem 0;
    font-style: italic;
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .nav-link,
  .nav-link:visited {
    font-size: 0.8rem;
    color: inherit;
    text-decoration: none;
    opacity: 0.6;
    transition: all 0.2s ease;
    padding: 0.4rem 0.75rem;
    border: 1px solid transparent;
    border-radius: 3px;
    border-bottom: none;
    background: transparent;
  }

  .nav-link:hover {
    opacity: 1;
    color: #10b981;
    border-color: color-mix(in srgb, #10b981 30%, transparent);
    background: color-mix(in srgb, #10b981 5%, transparent);
    border-bottom: none;
  }

  /* Footer */
  .terminal-footer {
    margin-top: 1.5rem;
    font-size: 0.8rem;
    opacity: 0.5;
  }

  .cursor-blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    from, to { opacity: 1; }
    50% { opacity: 0; }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .terminal-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .entry-field {
      flex-direction: column;
      gap: 0.25rem;
    }

    .field-label {
      min-width: auto;
    }

    .entry-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
