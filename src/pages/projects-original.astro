</Layout>

<style>
  /* Terminal Wrapper */
  .projects-terminal {
    font-family: "IBM Plex Mono", monospace;
    max-width: 52rem;
    margin: 0 auto;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-bottom: none;
    border-radius: 6px 6px 0 0;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .status-text {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #10b981;
  }

  .terminal-header h1 {
    font-size: 1rem;
    font-weight: 500;
    margin: 0;
    opacity: 0.8;
  }

  .terminal-body {
    padding: 1.5rem 1.25rem 1.25rem;
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-top: none;
    border-radius: 0 0 6px 6px;
    background: color-mix(in srgb, currentColor 2%, transparent);
  }

  .log-meta {
    font-size: 0.75rem;
    opacity: 0.5;
    margin: 0 0 1.5rem 0;
  }

  /* Section Headers */
  .section-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed color-mix(in srgb, currentColor 15%, transparent);
  }

  .section-icon {
    font-size: 1.1rem;
  }

  /* Featured Section */
  .featured-section {
    margin-bottom: 2.5rem;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }

  .featured-card {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    background: color-mix(in srgb, currentColor 4%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent);
    border-radius: 6px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .featured-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #10b981, #3b82f6);
    opacity: 0.8;
  }

  .featured-card:hover {
    background: color-mix(in srgb, currentColor 8%, transparent);
    border-color: color-mix(in srgb, currentColor 25%, transparent);
    transform: translateY(-2px);
  }

  .featured-highlight {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #10b981;
    margin-bottom: 0.75rem;
  }

  .featured-highlight.savings {
    color: #f59e0b;
    background: color-mix(in srgb, #f59e0b 15%, transparent);
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    display: inline-block;
  }

  .featured-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .featured-identifier {
    font-weight: 700;
    font-size: 1rem;
    line-height: 1.3;
  }

  .featured-description {
    font-size: 0.8rem;
    line-height: 1.5;
    opacity: 0.8;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .featured-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-bottom: 1rem;
  }

  .tech-pill {
    font-size: 0.65rem;
    padding: 0.2rem 0.5rem;
    background: color-mix(in srgb, #10b981 12%, transparent);
    border: 1px solid color-mix(in srgb, #10b981 25%, transparent);
    border-radius: 3px;
    color: #10b981;
  }

  .featured-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.7rem;
    opacity: 0.6;
    padding-top: 0.75rem;
    border-top: 1px solid color-mix(in srgb, currentColor 10%, transparent);
  }

  /* Category Section */
  .category-section {
    margin-bottom: 2rem;
  }

  /* Log entries container */
  .log-entries {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Individual log entry */
  .log-entry {
    padding: 1.25rem;
    background: color-mix(in srgb, currentColor 3%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    border-radius: 4px;
    margin-bottom: 1rem;
    transition:
      background 0.2s ease,
      border-color 0.2s ease;
  }

  .log-entry:hover {
    background: color-mix(in srgb, currentColor 7%, transparent);
    border-color: color-mix(in srgb, currentColor 20%, transparent);
  }

  /* Entry header with date and status */
  .entry-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    flex-wrap: wrap;
  }

  .entry-date {
    font-weight: 600;
    color: #10b981;
  }

  .entry-divider {
    opacity: 0.4;
  }

  .entry-status {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  /* Entry body with fields */
  .entry-body {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .entry-field {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 0.8rem;
    line-height: 1.5;
  }

  .field-label {
    color: #10b981;
    font-weight: 600;
    flex-shrink: 0;
    min-width: 120px;
  }

  .field-value {
    opacity: 0.85;
  }

  .field-value.identifier {
    color: #10b981;
    font-weight: 700;
    font-size: 1.1em;
    letter-spacing: 0.02em;
    opacity: 0.7;
  }

  .field-value.description {
    max-width: 60ch;
  }

  .identifier-link,
  .identifier-link:visited {
    color: #10b981;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1em;
    letter-spacing: 0.02em;
    transition: all 0.2s ease;
    padding: 0.15rem 0.4rem;
    margin: -0.15rem -0.4rem;
    border-radius: 3px;
    background: transparent;
    border-bottom: none;
  }

  .identifier-link:hover {
    background: color-mix(in srgb, #10b981 15%, transparent);
    color: #34d399;
    text-shadow: 0 0 8px rgba(16, 185, 129, 0.3);
    border-bottom: none;
  }

  /* Tech stack badges */
  .tech-row {
    flex-wrap: wrap;
  }

  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-badge {
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-radius: 2px;
    opacity: 0.7;
  }

  /* Case study link */
  .case-study {
    margin-top: 0.5rem;
  }

  .case-study-link,
  .case-study-link:visited {
    color: currentColor;
    text-decoration: none;
    opacity: 0.6;
    font-size: 0.75rem;
    border-bottom: none;
    background: transparent;
    transition:
      opacity 0.2s ease,
      color 0.2s ease;
  }

  .case-study-link:hover {
    opacity: 1;
    color: #10b981;
    background: transparent;
