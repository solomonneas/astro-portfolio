---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

const h2Headings = headings.filter(h => h.depth === 2);
const showToc = h2Headings.length >= 3;

// Estimated read time (~250 words per minute)
const words = entry.body?.split(/\s+/).length || 0;
const readTime = Math.max(1, Math.ceil(words / 250));
---

<Layout pageTitle={entry.data.title}>
  <!-- Reading progress bar -->
  <div class="progress-bar" id="progressBar"></div>

  <article class="blog-post">
    <header class="post-header">
      <a href="/blog" class="back-link">← Back to Blog</a>
      <h1 class="post-title">{entry.data.title}</h1>
      <p class="post-meta">
        {formatDate(entry.data.pubDate)}
        {entry.data.updatedDate && (
          <span class="updated-date"> · Updated {formatDate(entry.data.updatedDate)}</span>
        )}
        <span class="read-time"> · {readTime} min read</span>
      </p>
      {
        entry.data.tags && (
          <div class="post-tags">
            {entry.data.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )
      }
    </header>

    {showToc && (
      <nav class="toc">
        <h2 class="toc-title">Table of Contents</h2>
        <ol class="toc-list">
          {h2Headings.map((heading, i) => (
            <li>
              <a href={`#${heading.slug}`}>{heading.text}</a>
            </li>
          ))}
        </ol>
      </nav>
    )}

    <div class="post-content">
      <Content />
    </div>

    <!-- Ko-fi CTA -->
    <div class="kofi-cta">
      <a href="https://ko-fi.com/solomonneas" target="_blank" class="kofi-button">
        <img src="https://storage.ko-fi.com/cdn/cup-border.png" alt="Ko-fi" class="kofi-icon" />
        <span>Support me on Ko-fi</span>
      </a>
    </div>

    <footer class="post-footer">
      <a href="/blog" class="back-link">← Back to Blog</a>
    </footer>
  </article>
</Layout>

<script is:inline>
  // Reading progress bar
  window.addEventListener('scroll', function() {
    var bar = document.getElementById('progressBar');
    if (!bar) return;
    var scrollTop = window.scrollY;
    var docHeight = document.documentElement.scrollHeight - window.innerHeight;
    var progress = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
    bar.style.width = progress + '%';
  });

  // Copy buttons on code blocks
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.post-content pre').forEach(function(pre) {
      var btn = document.createElement('button');
      btn.className = 'copy-btn';
      btn.textContent = 'Copy';
      btn.addEventListener('click', function() {
        var code = pre.querySelector('code');
        var text = code ? code.textContent : pre.textContent;
        navigator.clipboard.writeText(text).then(function() {
          btn.textContent = 'Copied!';
          btn.style.color = 'var(--primary)';
          setTimeout(function() {
            btn.textContent = 'Copy';
            btn.style.color = '';
          }, 2000);
        });
      });
      pre.appendChild(btn);
    });
  });
</script>

<style>
  .progress-bar {
    position: fixed;
    top: 0;
    left: 0;
    height: 3px;
    width: 0%;
    background: var(--primary);
    z-index: 9999;
    transition: width 0.1s linear;
  }

  .blog-post {
    max-width: 48rem;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    font-family: 'IBM Plex Sans', sans-serif;
  }

  .post-header {
    margin-bottom: 2.5rem;
  }

  .back-link {
    display: inline-block;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 1.5rem;
    padding: 0.35rem 0.65rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .back-link:hover {
    color: var(--primary);
    border-color: var(--primary);
    background: var(--card-bg);
  }

  .post-title {
    font-family: "IBM Plex Mono", monospace;
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
    color: var(--primary);
  }

  .post-meta {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 0 0 0.75rem 0;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  .tag {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.65rem;
    color: var(--text-muted);
    padding: 0.15rem 0.5rem;
    border: 1px solid var(--border);
    border-radius: 3px;
  }

  /* Table of Contents */
  .toc {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem 1.5rem;
    margin-bottom: 2rem;
  }

  .toc-title {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--primary);
    margin: 0 0 0.75rem 0;
  }

  .toc-list {
    margin: 0;
    padding-left: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .toc-list li {
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .toc-list li::marker {
    color: var(--primary);
    font-weight: 600;
  }

  .toc-list a {
    color: var(--text);
    text-decoration: none;
    border-bottom: none;
    font-size: 0.85rem;
    transition: color 0.2s ease;
  }

  .toc-list a:hover {
    color: var(--primary);
    background: transparent;
  }

  .post-content {
    border-top: 1px solid var(--border);
    padding-top: 2rem;
  }

  .post-content :global(h2) {
    font-family: "IBM Plex Mono", monospace;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    padding-left: 0.75rem;
    border-left: 3px solid var(--primary);
  }

  .post-content :global(h3) {
    font-family: "IBM Plex Mono", monospace;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    padding-left: 0.75rem;
    border-left: 3px solid var(--secondary);
  }

  .post-content :global(h4) {
    font-family: "IBM Plex Mono", monospace;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .post-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.75;
  }

  .post-content :global(strong) {
    color: var(--text);
    font-weight: 700;
  }

  [data-theme="dark"] .post-content :global(strong) {
    color: #fff;
  }

  [data-theme="light"] .post-content :global(strong) {
    color: #3d3522;
  }

  .post-content :global(pre) {
    font-family: "IBM Plex Mono", monospace;
    background: var(--code-bg);
    border: none;
    border-left: 3px solid var(--border);
    padding: 1rem 1.25rem;
    border-radius: 0;
    margin: 1.5rem 0;
    font-size: 0.85rem;
    white-space: pre-wrap;
    word-wrap: break-word;
    overflow-x: visible;
    position: relative;
  }

  .post-content :global(pre code) {
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .post-content :global(pre .copy-btn) {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    color: var(--text-muted);
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.65rem;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    cursor: pointer;
    opacity: 0;
    transition: all 0.15s ease;
  }

  .post-content :global(pre:hover .copy-btn) {
    opacity: 1;
  }

  .post-content :global(pre .copy-btn:hover) {
    color: var(--primary);
    border-color: var(--primary);
  }

  .post-content :global(code) {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.9em;
  }

  .post-content :global(:not(pre) > code) {
    color: var(--primary);
    background: var(--code-bg);
    padding: 0.15rem 0.35rem;
    border-radius: 3px;
    font-size: 0.85em;
  }

  .post-content :global(a) {
    color: var(--link);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: color-mix(in srgb, var(--link) 40%, transparent);
    font-size: inherit;
    border-bottom: none;
  }

  .post-content :global(a:hover) {
    text-decoration-color: var(--link);
    background: transparent;
    color: var(--link);
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--tertiary);
    margin: 1.5rem 0;
    padding: 0.75rem 1rem;
    background: var(--blockquote-bg);
    border-radius: 0 4px 4px 0;
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.85rem;
  }

  .post-content :global(th) {
    color: var(--primary);
    text-align: left;
    padding: 0.5rem;
    border-bottom: 2px solid var(--border);
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
  }

  .post-content :global(td) {
    padding: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  /* Ko-fi CTA */
  .kofi-cta {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  .kofi-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    background: #29abe0;
    color: #fff;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
    font-weight: 600;
    border: none;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(41, 171, 224, 0.3);
  }

  .kofi-button:hover {
    background: #1a9bd7;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(41, 171, 224, 0.4);
    color: #fff;
  }

  .kofi-icon {
    height: 20px;
    width: auto;
    animation: kofiWiggle 3s infinite;
  }

  @keyframes kofiWiggle {
    0%, 60%, 100% { transform: rotate(0) scale(1); }
    75% { transform: rotate(0) scale(1.1); }
    80% { transform: rotate(0) scale(1.08); }
    84%, 92% { transform: rotate(-8deg) scale(1.08); }
    88%, 96% { transform: rotate(8deg) scale(1.08); }
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  @media (max-width: 640px) {
    .blog-post {
      padding: 1.5rem 1rem;
    }
  }
</style>
