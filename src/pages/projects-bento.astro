  }

  .pill.more {
    opacity: 0.5;
  }

  .cell-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.7rem;
    opacity: 0.45;
    margin-top: auto;
    padding-top: 0.75rem;
  }

  .cell-link {
    font-size: 0.7rem;
    font-weight: 500;
    text-decoration: none;
    margin-top: 0.5rem;
    opacity: 0.8;
