    color: #3b82f6;
  }

  .highlight.savings {
    color: #f59e0b;
    background: rgba(245, 158, 11, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }

  .cell-title {
    font-size: 1.15rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .cell-title.small {
