---
import Layout from "../layouts/Layout.astro";
import StatusLight from "../components/StatusLight.astro";

// Featured projects (top showcase for recruiters)
const featuredProjects = [
    ],
  },
];

const totalProjects = featuredProjects.length + categories.reduce((sum, cat) => sum + cat.projects.length, 0);

// Color map for category gradients
const colorMap: Record<string, { bg: string; border: string; accent: string }> = {
  red:    { bg: "rgba(239, 68, 68, 0.04)",   border: "rgba(239, 68, 68, 0.12)",   accent: "#ef4444" },
  blue:   { bg: "rgba(59, 130, 246, 0.04)",   border: "rgba(59, 130, 246, 0.12)",   accent: "#3b82f6" },
  green:  { bg: "rgba(16, 185, 129, 0.04)",   border: "rgba(16, 185, 129, 0.12)",   accent: "#10b981" },
  purple: { bg: "rgba(139, 92, 246, 0.04)",   border: "rgba(139, 92, 246, 0.12)",   accent: "#8b5cf6" },
};
---

<Layout pageTitle="Projects">
  <section class="bento-page">
    <header class="page-header">
      <h1>Projects</h1>
      <p class="subtitle">{totalProjects} things I've built, broken, and shipped</p>
    </header>

    <!-- Featured: Full-width Bento -->
    <div class="bento-featured">
      {featuredProjects.map((project, i) => (
        <a
          href={project.href}
          class={`bento-cell featured ${i < 2 ? 'span-full' : i < 4 ? 'span-half' : 'span-third'}`}
        >
          <div class="cell-inner">
            <div class="cell-top">
              <span class={`highlight ${project.highlight.includes('$') ? 'savings' : ''}`}>
                {project.highlight}
              </span>
              <StatusLight status={project.status} />
            </div>
            <h3 class="cell-title">{project.identifier.replace(/_/g, " ")}</h3>
            <p class="cell-desc">{project.description}</p>
            <div class="cell-tech">
              {project.techStack.slice(0, 4).map((tech) => (
                <span class="pill">{tech}</span>
              ))}
              {project.techStack.length > 4 && (
                <span class="pill more">+{project.techStack.length - 4}</span>
              )}
            </div>
            <div class="cell-meta">
              <span>{project.origin}</span>
              <span>{project.date}</span>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Categorized Bento Sections -->
    {categories.map((category) => {
      const colors = colorMap[category.color] || colorMap.green;
      return (
        <div class="bento-category">
          <h2 class="cat-header" style={`border-color: ${colors.accent}`}>
            <span class="cat-icon">{category.icon}</span>
            {category.name}
          </h2>
          <div class="bento-grid">
            {category.projects.map((project, i) => (
              <div
                class={`bento-cell cat-cell ${i === 0 && category.projects.length > 2 ? 'span-2col' : ''}`}
                style={`background: ${colors.bg}; border-color: ${colors.border}`}
              >
                <div class="cell-inner">
                  <div class="cell-top">
                    <StatusLight status={project.status} />
                    <span class="cell-date">{project.date}</span>
                  </div>
                  {project.href ? (
                    <a href={project.href} class="cell-title-link">
                      <h3 class="cell-title small">{project.identifier.replace(/_/g, " ")}</h3>
                    </a>
                  ) : (
                    <h3 class="cell-title small">{project.identifier.replace(/_/g, " ")}</h3>
                  )}
                  <p class="cell-origin">{project.origin}</p>
                  <p class="cell-desc small">{project.description}</p>
                  <div class="cell-tech">
                    {project.techStack.map((tech) => (
                      <span class="pill" style={`border-color: ${colors.border}; color: ${colors.accent}`}>{tech}</span>
                    ))}
                  </div>
                  {project.href && (
                    <a href={project.href} class="cell-link" style={`color: ${colors.accent}`}>
                      View details &rarr;
                    </a>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      );
    })}

    <!-- Navigation -->
    <nav class="nav-section">
      <p class="nav-label">Keep going</p>
      <div class="nav-links">
        <a href="/experience" class="nav-link">Experience</a>
        <a href="/hire" class="nav-link">Hire Me</a>
        <a href="/blog" class="nav-link">Blog</a>
      </div>
    </nav>
  </section>
</Layout>

<style>
  .bento-page {
    max-width: 68rem;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .page-header {
    margin-bottom: 2.5rem;
  }

  .page-header h1 {
    font-size: 2.25rem;
    font-weight: 800;
    margin: 0 0 0.4rem 0;
    letter-spacing: -0.03em;
  }

  .subtitle {
    font-size: 0.95rem;
    opacity: 0.5;
    margin: 0;
  }

  /* Featured Bento */
  .bento-featured {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .bento-cell {
    border-radius: 14px;
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    background: color-mix(in srgb, currentColor 3%, transparent);
    transition: all 0.25s ease;
    overflow: hidden;
  }

  .bento-cell:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    border-color: color-mix(in srgb, currentColor 20%, transparent);
  }

  .bento-cell.featured {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .span-full {
    grid-column: span 6;
  }

  .span-half {
    grid-column: span 3;
  }

  .span-third {
    grid-column: span 2;
  }

  .cell-inner {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .cell-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .highlight {
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #3b82f6;
  }

  .highlight.savings {
    color: #f59e0b;
    background: rgba(245, 158, 11, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }

  .cell-title {
    font-size: 1.15rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .cell-title.small {
    font-size: 0.95rem;
  }

  .cell-title-link {
    text-decoration: none;
    color: inherit;
  }

  .cell-title-link:hover .cell-title {
    opacity: 0.8;
  }

  .cell-origin {
    font-size: 0.7rem;
    opacity: 0.5;
    margin: 0 0 0.5rem 0;
  }

  .cell-desc {
    font-size: 0.8rem;
    line-height: 1.55;
    opacity: 0.7;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .cell-desc.small {
    font-size: 0.75rem;
  }

  .cell-date {
    font-size: 0.65rem;
    opacity: 0.4;
  }

  .cell-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    margin-bottom: 0.5rem;
  }

  .pill {
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.15rem 0.45rem;
    border-radius: 6px;
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent);
    background: color-mix(in srgb, currentColor 3%, transparent);
  }

  .pill.more {
    opacity: 0.5;
  }

  .cell-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.7rem;
    opacity: 0.45;
    margin-top: auto;
    padding-top: 0.75rem;
  }

  .cell-link {
    font-size: 0.7rem;
    font-weight: 500;
    text-decoration: none;
    margin-top: 0.5rem;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .cell-link:hover {
    opacity: 1;
  }

  /* Category Sections */
  .bento-category {
    margin-bottom: 2.5rem;
  }

  .cat-header {
    font-size: 1.15rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cat-icon {
    font-size: 1.1rem;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .cat-cell {
    border-radius: 12px;
  }

  .span-2col {
    grid-column: span 2;
  }

  /* Navigation */
  .nav-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    text-align: center;
  }

  .nav-label {
    font-size: 0.8rem;
    opacity: 0.4;
    margin: 0 0 1rem 0;
  }

  .nav-links {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .nav-link {
    font-size: 0.85rem;
    font-weight: 500;
    color: inherit;
    text-decoration: none;
    padding: 0.5rem 1.25rem;
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent);
    border-radius: 10px;
    transition: all 0.2s ease;
    opacity: 0.6;
  }

  .nav-link:hover {
    opacity: 1;
    border-color: #10b981;
    color: #10b981;
    background: rgba(16, 185, 129, 0.05);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .bento-featured {
      grid-template-columns: repeat(2, 1fr);
    }

    .span-full,
    .span-half,
    .span-third {
      grid-column: span 1;
    }

    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .span-2col {
      grid-column: span 2;
    }
  }

  @media (max-width: 640px) {
    .bento-page {
      padding: 1.5rem 1rem;
    }

    .page-header h1 {
      font-size: 1.75rem;
    }

    .bento-featured {
      grid-template-columns: 1fr;
    }

    .span-full,
    .span-half,
    .span-third {
      grid-column: span 1;
    }

    .bento-grid {
      grid-template-columns: 1fr;
    }

    .span-2col {
      grid-column: span 1;
    }

    .cell-inner {
      padding: 1.25rem;
    }
  }
</style>
