---
import Layout from "../layouts/Layout.astro";
import StatusLight from "../components/StatusLight.astro";
---

<Layout pageTitle="Contact">
  <section class="contact-page">
    <header class="page-header">
      <h1>Contact</h1>
    </header>

    <div class="contact-card">
      <p class="card-intro">Available contact methods:</p>

      <ul class="contact-list">
        <li>
          <a href="mailto:me@solomonneas.dev" class="contact-link">
            <span class="link-label">Email</span>
            <span class="link-value">me@solomonneas.dev</span>
          </a>
        </li>
        <li>
          <a href="https://www.linkedin.com/in/solomon-neas/" class="contact-link" target="_blank">
            <span class="link-label">LinkedIn</span>
            <span class="link-value">Professional profile</span>
          </a>
        </li>
        <li>
          <a href="https://github.com/solomonneas" class="contact-link" target="_blank">
            <span class="link-label">GitHub</span>
            <span class="link-value">Code repositories</span>
          </a>
        </li>
        <li>
          <a href="https://x.com/solomonneas" class="contact-link" target="_blank">
            <span class="link-label">X</span>
            <span class="link-value">@solomonneas</span>
          </a>
        </li>
        <li>
          <a href="https://bsky.app/profile/solomonneas.dev" class="contact-link" target="_blank">
            <span class="link-label">Bluesky</span>
            <span class="link-value">solomonneas.dev</span>
          </a>
        </li>
        <li>
          <a href="https://substack.com/@solomonneas?" class="contact-link" target="_blank">
            <span class="link-label">Substack</span>
            <span class="link-value">Newsletter & writing</span>
          </a>
        </li>
        <li>
          <a href="https://ko-fi.com/solomonneas" class="contact-link" target="_blank">
            <span class="link-label">Ko-fi</span>
            <span class="link-value">Buy me a coffee</span>
          </a>
        </li>
        <li>
          <a href="https://linktr.ee/solomonneas" class="contact-link" target="_blank">
            <span class="link-label">Linktree</span>
            <span class="link-value">All links</span>
          </a>
        </li>
      </ul>
    </div>

    <div class="nav-section">
      <div class="nav-links">
        <a href="/hire" class="nav-link">Hire Me</a>
        <a href="/about" class="nav-link">About</a>
        <a href="/projects" class="nav-link">Projects</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-page {
    font-family: "IBM Plex Mono", monospace;
    max-width: 42rem;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    margin: 0;
    color: var(--primary);
    line-height: 1.1;
  }

  .contact-card {
    padding: 1.25rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .card-intro {
    margin: 0 0 1.25rem 0;
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .contact-list li {
    margin: 0;
    animation: fadeIn 0.3s ease-out forwards;
    opacity: 0;
  }

  .contact-list li:nth-child(1) { animation-delay: 0.05s; }
  .contact-list li:nth-child(2) { animation-delay: 0.1s; }
  .contact-list li:nth-child(3) { animation-delay: 0.15s; }
  .contact-list li:nth-child(4) { animation-delay: 0.2s; }
  .contact-list li:nth-child(5) { animation-delay: 0.25s; }
  .contact-list li:nth-child(6) { animation-delay: 0.3s; }
  .contact-list li:nth-child(7) { animation-delay: 0.35s; }
  .contact-list li:nth-child(8) { animation-delay: 0.4s; }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateX(-5px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .contact-link {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    padding: 0.5rem 0.75rem;
    border-radius: 3px;
    font-size: 0.85rem;
    background: transparent;
    transition: all 0.15s ease;
    text-decoration: none;
    color: inherit;
    border: 1px solid transparent;
  }

  .contact-link:hover {
    background: var(--card-bg);
    border-color: var(--border);
  }

  .link-label {
    color: var(--primary);
    font-weight: 600;
    min-width: 80px;
  }

  .link-value {
    color: var(--text-muted);
  }

  .nav-section {
    padding-top: 1rem;
    border-top: 1px dashed var(--border);
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .nav-link {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: all 0.2s ease;
    padding: 0.4rem 0.75rem;
    border: 1px solid transparent;
    border-radius: 3px;
  }

  .nav-link:hover {
    color: var(--primary);
    border-color: var(--primary);
    background: var(--card-bg);
  }

  @media (max-width: 640px) {
    .contact-link {
      flex-wrap: wrap;
    }

    .link-value {
      width: 100%;
      margin-top: 0.25rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
