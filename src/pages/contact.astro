---
import Layout from "../layouts/Layout.astro";
---

<Layout pageTitle="Contact">
  <div class="text-content">
    <div class="terminal-window">
      <div class="terminal-header">
        <span class="terminal-title">$ cat ~/contacts.txt</span>
      </div>
      <div class="terminal-content">
        <p class="terminal-intro"># Available contact methods:</p>
        <ul class="contact-list">
          <li>
            <a href="mailto:srneas@gmail.com" class="contact-link">
              <span class="prompt">$</span>
              <span class="command">open</span>
              <span class="arg">email</span>
              <span class="comment"># srneas@gmail.com</span>
            </a>
          </li>
          <li>
            <a href="https://www.linkedin.com/in/solomon-neas/" class="contact-link" target="_blank">
              <span class="prompt">$</span>
              <span class="command">visit</span>
              <span class="arg">linkedin</span>
              <span class="comment"># Professional profile</span>
            </a>
          </li>
          <li>
            <a href="https://github.com/solomonneas" class="contact-link" target="_blank">
              <span class="prompt">$</span>
              <span class="command">visit</span>
              <span class="arg">github</span>
              <span class="comment"># Code repositories</span>
            </a>
          </li>
          <li>
            <a href="https://x.com/solomonneas" class="contact-link" target="_blank">
              <span class="prompt">$</span>
              <span class="command">visit</span>
              <span class="arg">x</span>
              <span class="comment"># @solomonneas</span>
            </a>
          </li>
          <li>
            <a href="https://bsky.app/profile/sn-dot-dev.bsky.social" class="contact-link" target="_blank">
              <span class="prompt">$</span>
              <span class="command">visit</span>
              <span class="arg">bluesky</span>
              <span class="comment"># sn-dot-dev.bsky.social</span>
            </a>
          </li>
          <li>
            <a href="https://substack.com/@solomonneas?" class="contact-link" target="_blank">
              <span class="prompt">$</span>
              <span class="command">visit</span>
              <span class="arg">substack</span>
              <span class="comment"># Newsletter & writing</span>
            </a>
          </li>
          <li>
            <a href="https://ko-fi.com/solomonneas" class="contact-link" target="_blank">
              <span class="prompt">$</span>
              <span class="command">support</span>
              <span class="arg">ko-fi</span>
              <span class="comment"># Buy me a coffee</span>
            </a>
          </li>
          <li>
            <a href="https://linktr.ee/solomonneas" class="contact-link" target="_blank">
              <span class="prompt">$</span>
              <span class="command">visit</span>
              <span class="arg">linktree</span>
              <span class="comment"># All links</span>
            </a>
          </li>
        </ul>
        <p class="terminal-footer">
          <span class="cursor">â–ˆ</span>
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .terminal-window {
    max-width: 42rem;
    margin-top: 2rem;
    border: 1px solid var(--text);
    border-radius: 4px;
    overflow: hidden;
  }

  .terminal-header {
    background: rgba(0, 0, 0, 0.1);
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--text);
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
  }

  .terminal-title {
    font-weight: 500;
  }

  .terminal-content {
    padding: 1.5rem;
    font-family: "IBM Plex Mono", monospace;
  }

  .terminal-intro {
    margin: 0 0 1.5rem 0;
    color: var(--text);
    opacity: 0.7;
    font-size: 0.85rem;
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-list li {
    margin: 0;
  }

  .contact-link {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    padding: 0.4rem 0.6rem;
    border-radius: 2px;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
    background: transparent;
    transition: all 0.15s ease;
    text-decoration: none !important;
    border: 1px solid transparent;
    border-bottom: none !important;
  }

  .contact-link:hover {
    background: rgba(0, 0, 0, 0.05);
    border-color: var(--text);
  }

  .prompt {
    color: var(--text);
    opacity: 0.6;
    font-weight: 600;
  }

  .command {
    color: var(--text);
    font-weight: 600;
  }

  .arg {
    color: var(--text);
    opacity: 0.9;
  }

  .comment {
    color: var(--text);
    opacity: 0.5;
    font-style: italic;
    margin-left: auto;
  }

  .terminal-footer {
    margin-top: 1.5rem;
    margin-bottom: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .cursor {
    animation: blink 1s step-end infinite;
    opacity: 0.7;
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  /* Subtle animation for the list appearance */
  .contact-list li {
    animation: fadeIn 0.3s ease-out forwards;
    opacity: 0;
  }

  .contact-list li:nth-child(1) {
    animation-delay: 0.05s;
  }
  .contact-list li:nth-child(2) {
    animation-delay: 0.1s;
  }
  .contact-list li:nth-child(3) {
    animation-delay: 0.15s;
  }
  .contact-list li:nth-child(4) {
    animation-delay: 0.2s;
  }
  .contact-list li:nth-child(5) {
    animation-delay: 0.25s;
  }
  .contact-list li:nth-child(6) {
    animation-delay: 0.3s;
  }
  .contact-list li:nth-child(7) {
    animation-delay: 0.35s;
  }
  .contact-list li:nth-child(8) {
    animation-delay: 0.4s;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateX(-5px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
