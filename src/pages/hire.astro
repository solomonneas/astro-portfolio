<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('resumeToggle');
    const dropdown = document.getElementById('resumeDropdown');
    if (!toggle || !dropdown) return;

    toggle.addEventListener('click', () => {
      const open = dropdown.classList.toggle('open');
      toggle.classList.toggle('active', open);
    });

    // Close on outside click
    document.addEventListener('click', (e) => {
      if (!toggle.contains(e.target as Node) && !dropdown.contains(e.target as Node)) {
        dropdown.classList.remove('open');
        toggle.classList.remove('active');
      }
    });
  });
</script>

<style>
  .hire {
    font-family: "IBM Plex Mono", monospace;
    max-width: 56rem;
    margin: 0 auto;
  }

  /* Page Header */
  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px dashed color-mix(in srgb, currentColor 15%, transparent);
  }

  .prompt {
    font-size: 0.8rem;
    opacity: 0.4;
    margin: 0 0 0.5rem 0;
  }

  .page-title {
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    line-height: 1.1;
    color: #10b981;
  }

  .availability {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.8rem;
  }

  .avail-text {
    color: #10b981;
    font-weight: 600;
  }

  /* Sections */
  .section {
    margin-bottom: 2.5rem;
  }

  .section-header {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    opacity: 0.9;
  }

  .section-comment {
    font-size: 0.75rem;
    opacity: 0.45;
    margin: 0 0 1.25rem 0;
    font-style: italic;
  }

  /* Intro */
  .intro {
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.95rem;
    line-height: 1.7;
    margin: 0 0 1.25rem 0;
    opacity: 0.85;
    max-width: 58ch;
    text-align: left;
  }

  /* Callout */
  .callout {
    display: flex;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    border-left: 2px solid #f59e0b;
    background: color-mix(in srgb, #f59e0b 4%, transparent);
    border-radius: 0 6px 6px 0;
    margin-bottom: 1.5rem;
  }

  .callout-icon {
    color: #f59e0b;
    font-weight: 700;
    flex-shrink: 0;
    font-size: 0.85rem;
  }

  .callout p {
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.85rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.85;
    text-align: left;
  }

  /* Info Row */
  .info-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    justify-content: space-between;
  }

  .badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .badge {
    font-size: 0.7rem;
    padding: 0.3rem 0.6rem;
    border-radius: 3px;
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    background: color-mix(in srgb, currentColor 3%, transparent);
    opacity: 0.7;
  }

  .flag-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .flag-img {
    width: 1.4em;
    height: 1em;
    border-radius: 2px;
    flex-shrink: 0;
    vertical-align: middle;
    border: none;
  }

  /* Resume Selector */
  .resume-selector {
    position: relative;
  }

  .resume-toggle {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
    color: #10b981;
    background: color-mix(in srgb, #10b981 8%, transparent);
    border: 1px solid color-mix(in srgb, #10b981 30%, transparent);
    padding: 0.6rem 1.25rem;
    border-radius: 3px;
    cursor: pointer;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .resume-toggle:hover,
  .resume-toggle.active {
    background: color-mix(in srgb, #10b981 15%, transparent);
    border-color: #10b981;
    box-shadow: 0 0 12px color-mix(in srgb, #10b981 20%, transparent);
    color: #10b981;
  }

  .resume-dropdown {
    position: absolute;
    right: 0;
    top: calc(100% + 0.5rem);
    min-width: 280px;
    background: #0d1117;
    border: 1px solid color-mix(in srgb, #10b981 25%, transparent);
    border-radius: 6px;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: all 0.2s ease;
    z-index: 50;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .resume-dropdown.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .resume-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.15s ease;
    border-bottom: 1px solid color-mix(in srgb, currentColor 8%, transparent);
  }

  .resume-option:last-child {
    border-bottom: none;
  }

  .resume-option:hover {
    background: color-mix(in srgb, #10b981 10%, transparent);
  }

  .option-icon {
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .option-text {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .option-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: #10b981;
  }

  .option-desc {
    font-size: 0.65rem;
    opacity: 0.5;
  }

  /* Services Grid */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.25rem;
  }

  .service-card {
    background: color-mix(in srgb, currentColor 3%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    border-radius: 6px;
    display: flex;
    flex-direction: column;
    transition: all 0.2s ease;
    overflow: hidden;
  }

  .service-card:hover {
    border-color: color-mix(in srgb, #10b981 30%, transparent);
    box-shadow: 0 0 20px color-mix(in srgb, #10b981 8%, transparent);
  }

  .service-header {
    padding: 1.25rem 1.25rem 0;
  }

  .service-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: #10b981;
    margin: 0;
    line-height: 1.3;
  }

  .service-desc {
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.8rem;
    line-height: 1.6;
    opacity: 0.75;
    padding: 0.75rem 1.25rem;
    margin: 0;
    text-align: left;
  }

  .service-specs {
    list-style: none;
    padding: 0 1.25rem;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
    flex-grow: 1;
  }

  .service-specs li {
    font-size: 0.75rem;
    opacity: 0.7;
    padding-left: 1.2rem;
    position: relative;
    line-height: 1.5;
  }

  .service-specs li::before {
    content: "[+]";
    position: absolute;
    left: 0;
    color: #10b981;
    font-size: 0.65rem;
    font-weight: 600;
    opacity: 0.6;
  }

  .service-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    padding: 0.75rem 1.25rem;
  }

  .service-links a {
    font-size: 0.65rem;
    opacity: 0.45;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    padding: 0.15rem 0.4rem;
    border: 1px solid color-mix(in srgb, currentColor 8%, transparent);
    border-radius: 2px;
  }

  .service-links a:hover {
    opacity: 1;
    color: #10b981;
    border-color: color-mix(in srgb, #10b981 30%, transparent);
  }

  .service-cta {
    padding: 1rem 1.25rem;
    border-top: 1px solid color-mix(in srgb, currentColor 8%, transparent);
    margin-top: auto;
  }

  .cta-btn {
    display: block;
    text-align: center;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    color: #10b981;
    background: color-mix(in srgb, #10b981 6%, transparent);
    border: 1px solid color-mix(in srgb, #10b981 25%, transparent);
    padding: 0.55rem 1rem;
    border-radius: 3px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .cta-btn:hover {
    background: color-mix(in srgb, #10b981 12%, transparent);
    border-color: #10b981;
    box-shadow: 0 0 10px color-mix(in srgb, #10b981 20%, transparent);
    color: #10b981;
  }

  /* Nav */
  .nav-section {
    padding-top: 1rem;
    border-top: 1px dashed color-mix(in srgb, currentColor 15%, transparent);
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .nav-link {
    font-size: 0.8rem;
    color: inherit;
    text-decoration: none;
    opacity: 0.6;
    transition: all 0.2s ease;
    padding: 0.4rem 0.75rem;
    border: 1px solid transparent;
    border-radius: 3px;
  }

  .nav-link:hover {
    opacity: 1;
    color: #10b981;
    border-color: color-mix(in srgb, #10b981 30%, transparent);
    background: color-mix(in srgb, #10b981 5%, transparent);
  }

  /* Footer */
  .terminal-footer {
    margin-top: 1rem;
    font-size: 0.8rem;
    opacity: 0.5;
  }

  .cursor-blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    from, to { opacity: 1; }
    50% { opacity: 0; }
  }

  /* Responsive */
  @media (max-width: 640px) {
    .page-title {
      font-size: 2rem;
    }

    .info-row {
      flex-direction: column;
      align-items: flex-start;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .resume-dropdown {
      right: auto;
      left: 0;
      min-width: 260px;
    }

    .nav-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
