---
import Layout from "../layouts/Layout.astro";
import StatusLight from "../components/StatusLight.astro";
---

<Layout pageTitle="Hire">
  <section class="text-content">
    <h1>Hire Me</h1>
    <p>Enterprise-grade solutions delivered with precision. Select a service module below.</p>
  </section>

  <section class="services-grid">
    <!-- Service Module 1: Infrastructure & Cybersecurity -->
    <div class="service-card">
      <div class="card-header">
        <div class="header-left">
          <StatusLight status="completed" />
          <span class="module-id">MOD_INFRA_SEC</span>
        </div>
        <span class="status-label">ACTIVE</span>
      </div>
      <div class="card-body">
        <h2 class="service-title">Infrastructure & Cybersecurity Consulting</h2>
        <p class="service-desc">
          Enterprise-grade solutions for virtualization architecture, scalable SOC implementation, and multi-platform
          automation frameworks.
        </p>
        <div class="tech-specs">
          <h3>// Technical Specs</h3>
          <ul>
            <li><span class="prefix">[+]</span> Virtualization Architecture Design</li>
            <li><span class="prefix">[+]</span> Security Operations Center Implementation</li>
            <li><span class="prefix">[+]</span> Multi-Platform Automation Pipelines</li>
            <li><span class="prefix">[+]</span> Network Infrastructure Optimization</li>
            <li><span class="prefix">[+]</span> Threat Detection & Response Planning</li>
          </ul>
        </div>
        <a href="#" class="case-study-link">> View Case Study: SOC_Implementation.log</a>
      </div>
      <div class="card-footer">
        <a href="/contact" class="cta-button">[ Execute: Request_Consultation ]</a>
      </div>
    </div>

    <!-- Service Module 2: Instructional Design -->
    <div class="service-card">
      <div class="card-header">
        <div class="header-left">
          <StatusLight status="completed" />
          <span class="module-id">MOD_EDU_DESIGN</span>
        </div>
        <span class="status-label">ACTIVE</span>
      </div>
      <div class="card-body">
        <h2 class="service-title">Instructional Design & Adjunct Services</h2>
        <p class="service-desc">
          Academic consultation, curriculum development, and hands-on lab design for technical education programs.
        </p>
        <div class="tech-specs">
          <h3>// Technical Specs</h3>
          <ul>
            <li><span class="prefix">[+]</span> Adjunct Faculty Contracts</li>
            <li><span class="prefix">[+]</span> Windows/Linux Administration Curriculum</li>
            <li><span class="prefix">[+]</span> Server Administration Course Design</li>
            <li><span class="prefix">[+]</span> Programming Curriculum Development</li>
            <li><span class="prefix">[+]</span> Hands-On Lab Environment Design</li>
          </ul>
        </div>
        <a href="#" class="case-study-link">> View Case Study: Lab_Environment.log</a>
      </div>
      <div class="card-footer">
        <a href="/contact" class="cta-button">[ Request: Adjunct_CV ]</a>
      </div>
    </div>

    <!-- Service Module 3: Web Development -->
    <div class="service-card">
      <div class="card-header">
        <div class="header-left">
          <StatusLight status="ongoing" />
          <span class="module-id">MOD_WEB_DEV</span>
        </div>
        <span class="status-label processing">PROCESSING</span>
      </div>
      <div class="card-body">
        <h2 class="service-title">Full-Stack Web Development</h2>
        <p class="service-desc">
          High-performance hybrid and SSR applications. Bespoke business solutions from interactive data dashboards to
          custom tools.
        </p>
        <div class="tech-specs">
          <h3>// Technical Specs</h3>
          <ul>
            <li><span class="prefix">[+]</span> Hybrid/SSR Application Development</li>
            <li><span class="prefix">[+]</span> Interactive Data Dashboards</li>
            <li><span class="prefix">[+]</span> Custom Business Tools & Portals</li>
            <li><span class="prefix">[+]</span> API Design & Integration</li>
            <li><span class="prefix">[+]</span> Small-to-Mid Business Solutions</li>
          </ul>
        </div>
        <a href="#" class="case-study-link">> View Case Study: Dashboard_Build.log</a>
      </div>
      <div class="card-footer">
        <a href="https://ko-fi.com/solomonneas" target="_blank" class="cta-button">[ Execute: Start_Project ]</a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="testimonials-section">
    <h2 class="testimonials-header">$ cat ~/testimonials.txt</h2>
    <div class="testimonials-grid">
      <!-- Testimonial 1 -->
      <div
        class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 font-mono text-sm relative group hover:border-emerald-500/30 transition-colors flex flex-col h-full">
        <div class="flex items-center gap-2 mb-4 border-b border-zinc-800 pb-2">
          <div class="w-2.5 h-2.5 rounded-full bg-red-500/50"></div>
          <div class="w-2.5 h-2.5 rounded-full bg-yellow-500/50"></div>
          <div class="w-2.5 h-2.5 rounded-full bg-emerald-500/50"></div>
          <span class="ml-2 text-xs text-zinc-100">review_01.txt</span>
        </div>
        <div class="text-zinc-200 mb-4 flex-grow">
          <span class="text-emerald-500">$</span> cat review_01.txt<br /><br />
          "You have been a vital part of our department. Can 't wait to see what 2026 has to offer!"
        </div>
        <div class="text-xs text-zinc-100 border-t border-zinc-800 pt-3 flex flex-col items-end gap-1 mt-auto w-full">
          <span class="font-semibold">-- John Stewart</span>
          <span class="text-zinc-400 text-right">Program Director, Polk State College</span>
        </div>
      </div>

      <!-- Testimonial 2 -->
      <div
        class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 font-mono text-sm relative group hover:border-emerald-500/30 transition-colors flex flex-col h-full">
        <div class="flex items-center gap-2 mb-4 border-b border-zinc-800 pb-2">
          <div class="w-2.5 h-2.5 rounded-full bg-red-500/50"></div>
          <div class="w-2.5 h-2.5 rounded-full bg-yellow-500/50"></div>
          <div class="w-2.5 h-2.5 rounded-full bg-emerald-500/50"></div>
          <span class="ml-2 text-xs text-zinc-100">review_02.txt</span>
        </div>
        <div class="text-zinc-200 mb-4 flex-grow">
          <span class="text-emerald-500">$</span> cat review_02.txt<br />
          "I can't recommend Solomon enough. He's a baller, shot caller."
        </div>
        <div class="text-xs text-zinc-100 border-t border-zinc-800 pt-3 flex flex-col items-end gap-1 mt-auto w-full">
          <span class="font-semibold whitespace-nowrap">-- Joseph Smith</span>
          <span class="text-zinc-400 text-right">Some Dude</span>
        </div>
      </div>

      <!-- Testimonial 3 -->
      <div
        class="bg-zinc-900/50 border border-zinc-800 rounded-lg p-4 font-mono text-sm relative group hover:border-emerald-500/30 transition-colors flex flex-col h-full">
        <div class="flex items-center gap-2 mb-4 border-b border-zinc-800 pb-2">
          <div class="w-2.5 h-2.5 rounded-full bg-red-500/50"></div>
          <div class="w-2.5 h-2.5 rounded-full bg-yellow-500/50"></div>
          <div class="w-2.5 h-2.5 rounded-full bg-emerald-500/50"></div>
          <span class="ml-2 text-xs text-zinc-100">review_03.txt</span>
        </div>
        <div class="text-zinc-200 mb-4 flex-grow">
          <span class="text-emerald-500">$</span> cat review_03.txt<br />
          "He's a mean one, Mr. Grinch."
        </div>
        <div class="text-xs text-zinc-100 border-t border-zinc-800 pt-3 flex flex-col items-end gap-1 mt-auto w-full">
          <span class="font-semibold">-- Every Who</span>
          <span class="text-zinc-400 text-right">Whoville</span>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .service-card {
    font-family: "IBM Plex Mono", monospace;
    background: rgba(24, 24, 27, 0.6);
    border: 1px solid rgba(63, 63, 70, 0.8);
    border-radius: 6px;
    display: flex;
    flex-direction: column;
    transition:
      border-color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .service-card:hover {
    border-color: rgba(52, 211, 153, 0.4);
    box-shadow: 0 0 20px rgba(52, 211, 153, 0.1);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid rgba(63, 63, 70, 0.8);
    background: rgba(0, 0, 0, 0.2);
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .module-id {
    font-size: 0.7rem;
    color: rgba(161, 161, 170, 0.9);
    letter-spacing: 0.05em;
  }

  .status-label {
    font-size: 0.65rem;
    color: #34d399;
    background: rgba(52, 211, 153, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 2px;
    letter-spacing: 0.1em;
  }

  .status-label.processing {
    animation: pulse-bg 2s ease-in-out infinite;
  }

  @keyframes pulse-bg {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .card-body {
    padding: 1.25rem;
    flex-grow: 1;
  }

  .service-title {
    font-size: 1rem;
    font-weight: 600;
    color: #34d399;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .service-desc {
    font-size: 0.8rem;
    color: rgba(228, 228, 231, 0.85);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .tech-specs h3 {
    font-size: 0.7rem;
    color: rgba(161, 161, 170, 0.7);
    margin: 0 0 0.5rem 0;
    font-weight: 400;
  }

  .tech-specs ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tech-specs li {
    font-size: 0.75rem;
    color: rgba(212, 212, 216, 0.9);
    padding: 0.25rem 0;
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .tech-specs .prefix {
    color: #34d399;
    font-weight: 600;
    flex-shrink: 0;
  }

  .case-study-link {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.7rem;
    color: rgba(161, 161, 170, 0.8);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .case-study-link:hover {
    color: #34d399;
  }

  .card-footer {
    padding: 1rem;
    border-top: 1px solid rgba(63, 63, 70, 0.8);
    background: rgba(0, 0, 0, 0.15);
  }

  .cta-button {
    display: block;
    text-align: center;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    color: #34d399;
    background: rgba(52, 211, 153, 0.1);
    border: 1px solid rgba(52, 211, 153, 0.3);
    padding: 0.6rem 1rem;
    border-radius: 3px;
    text-decoration: none;
    transition: all 0.2s ease;
    letter-spacing: 0.05em;
  }

  .cta-button:hover {
    background: rgba(52, 211, 153, 0.2);
    border-color: #34d399;
    box-shadow: 0 0 10px rgba(52, 211, 153, 0.3);
  }

  /* Testimonials Section */
  .testimonials-section {
    margin-top: 4rem;
  }

  .testimonials-header {
    font-family: "IBM Plex Mono", monospace;
    font-size: 1.25rem;
    font-weight: 600;
    color: currentColor;
    margin: 0 0 2rem 0;
    opacity: 0.9;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  /* Light theme compatibility */
  :global(body) .service-card {
    background: rgba(24, 24, 27, 0.6);
  }

  @media (prefers-color-scheme: light) {
    .service-card {
      background: rgba(39, 39, 42, 0.95);
    }
  }
</style>
