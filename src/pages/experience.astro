---
import Layout from "../layouts/Layout.astro";
import StatusLight from "../components/StatusLight.astro";

const experienceData = [
  {
    date: "2025-PRESENT",
    role: "Owner, Full Stack Software Developer",
    company: "solomonneas.dev",
    status: "ongoing",
    description: [
      "Building in public since 1999. 30+ projects shipped, 9 MCP servers published, and a full security operations toolkit, all built by orchestrating multi-model AI pipelines (Claude Opus, GPT, Gemini) with automated code review and CI/CD.",
      "Stack: React, TypeScript, Python, FastAPI, Astro, Vite, Tailwind.",
      "Security Tooling: CyberBRIEF (AI threat intel), Bro Hunter (Zeek/Suricata threat hunting), Playbook Forge (SOC playbooks), Intel Workbench (OSINT), SOC Showcase.",
      "MCP Servers: 9 published servers bridging AI agents to security tools: Zeek, Suricata, Wazuh, TheHive, MISP, Cortex, MITRE ATT&CK, Rapid7, Sophos.",
      "Developer Tools: Prompt Library, Usage Tracker.",
      "Infrastructure: Watchtower NOC Dashboard with real-time topology, LibreNMS/Proxmox integration, WebSocket updates, and auto-discovery.",
    ],
    projects: [
      { title: "CyberBRIEF", href: "/projects/cyberbrief" },
      { title: "Bro Hunter", href: "https://github.com/solomonneas/bro-hunter" },
      { title: "SOC Showcase", href: "/projects/soc-showcase" },
      { title: "Watchtower", href: "https://github.com/solomonneas/watchtower" },
      { title: "MCP Servers (9)", href: "https://github.com/solomonneas?tab=repositories&q=mcp" },
      { title: "LAIM", href: "/projects/laim" },
    ],
  },
  {
    date: "2023-PRESENT",
    role: "Network & Systems Engineer",
    company: "Polk State College — Network Systems Engineering Technology",
    status: "ongoing",
    subtitle: "Title: Laboratory Assistant",
    description: [
      "Sole IT support for the NSET department: 4 classrooms, 200+ devices, ~300 students.",
      "Engineered 7-component open-source SOC (Wazuh, TheHive, Cortex, MISP, Zeek, Suricata): $140K-$217K cost avoidance vs. outsourced MSSP.",
      "Developing Watchtower NOC Dashboard replacing ~$29K/year SolarWinds licensing.",
      "Migrated NDG Netlab+ from VMware ESXi to Proxmox VE, eliminating ~$68,600 in annual costs.",
      "Architecting Hyper-V to Proxmox migration with Samba AD integration for Windows file services consolidation.",
      "Administer Windows/Linux servers, Active Directory, Hyper-V, and automated SCCM imaging.",
      "Design and operate Cisco Catalyst switches, Palo Alto firewalls, and UniFi wireless with VLANs, ACLs, and port security.",
      "Designed custom cybersecurity and Linux+ labs aligned with NDG curriculum and certification objectives.",
      "Primary technical advisor to department leadership on infrastructure strategy.",
    ],
    projects: [
      { title: "Open Source SOC", href: "/projects/designing-and-building-an-open-source-soc" },
      { title: "VMware to Proxmox", href: "/projects/vmware-to-proxmox-migration" },
      { title: "Hyper-V to Proxmox", href: "/projects/hyperv-to-proxmox-migration" },
      { title: "Linux+ Labs", href: "/projects/linux-vm-labs-and-documentation" },
    ],
  },
  {
    date: "2021-2023",
    role: "User Support Specialist I",
    company: "Polk State College — Information Technology Services",
    status: "past",
    description: [
      "Technical support across six campuses. Managed ~2,000 endpoints and ~600 VoIP phones.",
      "De facto technical lead for Lakeland campus, primary escalation point for complex issues.",
      "Deployed Cisco Catalyst switches; configured VLANs, trunks, ACLs, and port security via CLI.",
      "Led system refresh replacing 500+ devices with AD integration, batch scripts, and GPOs.",
      "Administered Microsoft 365, Exchange, SQL Server, and enterprise applications.",
    ],
  },
  {
    date: "2000-2007",
    role: "Owner, Web Developer, & Project Manager",
    company: "Neas Web Productions",
    status: "past",
    description: [
      "Freelance web design during the GeoCities/Angelfire era. Custom PHP sites, domain migrations, graphic design.",
      "Built and repaired PCs as a side operation, learning hardware from the ground up.",
    ],
  },
  {
    date: "2004-2022",
    role: "Executive Chef & Culinary Professional",
    company: "Various Establishments",
    status: "past",
    description: [
      "17 years leading kitchen teams of 5-15 through high-pressure operations. Workflow optimization, resource allocation, and crisis management.",
      "Skills that translate directly: incident response, infrastructure operations, team mentorship, and training program design.",
    ],
    projects: [
      { title: "Full History on LinkedIn", href: "https://www.linkedin.com/in/solomon-neas/details/experience/" },
    ],
  },
];

const education = [
  {
    degree: "M.S. Cybersecurity Intelligence & Information Security",
    school: "University of South Florida",
    year: "In Progress",
    status: "ongoing",
  },
  {
    degree: "B.A.S. Supervision & Management",
    school: "Polk State College",
    year: "2025",
    focus: "Business Information Technology",
    status: "completed",
  },
  {
    degree: "A.S. Network Systems Engineering Technology",
    school: "Polk State College",
    year: "2022",
    status: "completed",
  },
  {
    degree: "Collegiate High School",
    school: "Polk State College",
    year: "2007",
    focus: "Cisco Networking & Systems Administration",
    status: "completed",
  },
];

const certifications = [
  {
    name: "CompTIA A+ (Good-For-Life)",
    issuer: "CompTIA",
    date: "May 2006",
    id: "COMP001004827739",
  },
];
---

<Layout pageTitle="Experience">
  <section class="experience">
    <header class="page-header">
      <h1>Experience</h1>
      <p class="subtitle">Professional timeline and technical growth</p>
    </header>

    <div class="section">
      <h2 class="section-header">Education</h2>
      <div class="edu-grid">
        {education.map((item) => (
          <div class={`edu-card ${item.status === 'ongoing' ? 'current' : ''}`}>
            <div class="edu-top">
              <span class="edu-degree">{item.degree}</span>
              {item.status === 'ongoing' && <StatusLight status="ongoing" />}
            </div>
            <span class="edu-school">{item.school} — {item.year}</span>
            {item.focus && <span class="edu-focus">{item.focus}</span>}
          </div>
        ))}
      </div>
    </div>

    <div class="section">
      <h2 class="section-header">Certifications</h2>
      <div class="cert-row">
        {certifications.map((cert) => (
          <div class="cert-card">
            <span class="cert-name">{cert.name}</span>
            <span class="cert-meta">{cert.issuer} — {cert.date}</span>
            <span class="cert-id">ID: {cert.id}</span>
          </div>
        ))}
      </div>
    </div>

    <div class="section">
      <h2 class="section-header">Work History</h2>
      <p class="section-comment">{experienceData.length} entries</p>

      <div class="timeline">
        {experienceData.map((job) => (
          <div class={`job-card ${job.status === 'ongoing' ? 'active' : ''}`}>
            <div class="job-header">
              <div class="job-meta">
                <span class="job-date">{job.date}</span>
                {job.status === 'ongoing' && (
                  <span class="job-badge"><StatusLight status="ongoing" /> Active</span>
                )}
              </div>
              <h3 class="job-role">{job.role}</h3>
              <span class="job-company">{job.company}</span>
              {job.subtitle && <span class="job-subtitle">{job.subtitle}</span>}
            </div>

            <ul class="job-items">
              {job.description.map((item) => (
                <li>
                  <span class="item-marker">+</span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>

            {job.projects && job.projects.length > 0 && (
              <div class="job-projects">
                {job.projects.map((project) => (
                  <a
                    href={project.href}
                    class="project-tag"
                    target={project.href.startsWith('http') ? '_blank' : undefined}
                    rel={project.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                  >
                    <span class="tag-arrow">{project.href.startsWith('http') ? '↗' : '→'}</span>
                    {project.title}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <div class="section nav-section">
      <div class="nav-links">
        <a href="/about" class="nav-link">About</a>
        <a href="/projects" class="nav-link">Projects</a>
        <a href="/hire" class="nav-link">Hire Me</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .experience {
    font-family: "IBM Plex Mono", monospace;
    max-width: 56rem;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-family: "IBM Plex Mono", monospace;
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: var(--primary);
    line-height: 1.1;
  }

  .subtitle {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0;
  }

  .resume-btn {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
    color: var(--primary);
    background: color-mix(in srgb, var(--primary) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--primary) 30%, transparent);
    padding: 0.6rem 1.25rem;
    border-radius: 3px;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .resume-btn:hover {
    background: color-mix(in srgb, var(--primary) 15%, transparent);
    border-color: var(--primary);
    box-shadow: 0 0 12px color-mix(in srgb, var(--primary) 20%, transparent);
    color: var(--primary);
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section-header {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }

  .section-comment {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 0 0 1.25rem 0;
    font-style: italic;
  }

  .edu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .edu-card {
    padding: 1rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 6px;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
    transition: all 0.2s ease;
  }

  .edu-card:hover {
    border-color: var(--text-muted);
  }

  .edu-card.current {
    border-color: color-mix(in srgb, var(--primary) 25%, transparent);
  }

  .edu-top {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .edu-degree {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--primary);
    line-height: 1.3;
  }

  .edu-school {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .edu-focus {
    font-size: 0.7rem;
    color: var(--text-muted);
    font-style: italic;
  }

  .cert-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .cert-card {
    padding: 0.75rem 1rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 6px;
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .cert-name {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--primary);
  }

  .cert-meta {
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  .cert-id {
    font-size: 0.65rem;
    color: var(--text-muted);
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .job-card {
    padding: 1.25rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .job-card:hover {
    border-color: var(--text-muted);
  }

  .job-card.active {
    border-color: color-mix(in srgb, var(--primary) 25%, transparent);
  }

  .job-header {
    margin-bottom: 1rem;
  }

  .job-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .job-date {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--primary);
  }

  .job-badge {
    font-size: 0.65rem;
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    color: var(--text-muted);
  }

  .job-role {
    font-size: 0.95rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }

  .job-company {
    font-size: 0.8rem;
    color: var(--text-muted);
    display: block;
  }

  .job-subtitle {
    font-size: 0.7rem;
    color: var(--text-muted);
    display: block;
    font-style: italic;
    margin-top: 0.2rem;
  }

  .job-items {
    list-style: none;
    padding: 0;
    margin: 0 0 1rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .job-items li {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.8rem;
    line-height: 1.6;
  }

  .item-marker {
    font-family: "IBM Plex Mono", monospace;
    color: var(--primary);
    flex-shrink: 0;
    font-size: 0.75rem;
    padding-top: 0.1rem;
  }

  .job-projects {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding-top: 0.75rem;
    border-top: 1px dashed var(--border);
  }

  .project-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.7rem;
    padding: 0.25rem 0.6rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 3px;
    text-decoration: none;
    color: var(--text-muted);
    transition: all 0.2s ease;
  }

  .project-tag:hover {
    color: var(--primary);
    border-color: var(--primary);
    background: color-mix(in srgb, var(--primary) 8%, transparent);
  }

  .tag-arrow {
    color: var(--primary);
    font-size: 0.65rem;
  }

  .nav-section {
    padding-top: 1rem;
    border-top: 1px dashed var(--border);
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .nav-link {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: all 0.2s ease;
    padding: 0.4rem 0.75rem;
    border: 1px solid transparent;
    border-radius: 3px;
  }

  .nav-link:hover {
    color: var(--primary);
    border-color: var(--primary);
    background: var(--card-bg);
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: 2rem;
    }

    .edu-grid {
      grid-template-columns: 1fr;
    }

    .nav-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
