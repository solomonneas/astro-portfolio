<style>
  .splash {
    font-family: "IBM Plex Mono", monospace;
    max-width: 56rem;
    margin: 0 auto;
  }

  .hero {
    min-height: calc(100vh - 12rem);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 2rem;
  }

  .hero-name {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.05;
    color: var(--primary);
    animation: fadeSlideIn 0.6s ease 0.1s both;
  }

  .hero-role {
    font-family: "IBM Plex Sans", sans-serif;
    font-size: clamp(0.85rem, 2vw, 1.05rem);
    color: var(--text-muted);
    margin: 0 0 0.75rem 0;
    letter-spacing: 0.01em;
    animation: fadeSlideIn 0.6s ease 0.2s both;
  }

  .hero-stat {
    font-size: 0.85rem;
    margin: 0 0 2rem 0;
    animation: fadeSlideIn 0.6s ease 0.3s both;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    animation: fadeSlideIn 0.6s ease 0.4s both;
  }

  .hero-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    animation: fadeSlideIn 0.6s ease 0.5s both;
  }

  .scroll-hint {
    margin-top: auto;
    padding-top: 1rem;
    padding-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    animation: fadeSlideIn 0.6s ease 0.8s both;
    transition: opacity 0.3s ease;
  }

  .scroll-arrow {
    animation: bobDown 2s ease-in-out infinite;
    font-size: 1rem;
  }

  .scroll-text {
    font-size: 0.7rem;
    letter-spacing: 0.05em;
  }

  @keyframes fadeSlideIn {
    from { opacity: 0; transform: translateY(12px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes bobDown {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(6px); }
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.7rem;
    padding: 0.3rem 0.6rem;
    border-radius: 3px;
    border: 1px solid var(--border);
    background: var(--card-bg);
  }

  .badge.green {
    border-color: color-mix(in srgb, var(--primary) 30%, transparent);
    color: var(--primary);
  }

  .badge.muted {
    color: var(--text-muted);
  }

  .action-primary,
  .action-secondary {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
    padding: 0.7rem 1.5rem;
    border-radius: 3px;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid;
  }

  .action-primary {
    color: var(--primary);
    background: color-mix(in srgb, var(--primary) 8%, transparent);
    border-color: color-mix(in srgb, var(--primary) 30%, transparent);
    font-weight: 600;
  }

  .action-primary:hover {
    background: color-mix(in srgb, var(--primary) 15%, transparent);
    border-color: var(--primary);
    box-shadow: 0 0 15px color-mix(in srgb, var(--primary) 20%, transparent);
    color: var(--primary);
  }

  .action-secondary {
    border-color: var(--border);
    background: var(--card-bg);
    color: var(--text);
  }

  .action-secondary:hover {
    border-color: var(--text-muted);
    background: var(--card-bg);
  }

  .below-fold {
    padding-top: 1rem;
    border-top: 1px dashed var(--border);
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section-header {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }

  .section-comment {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 0 0 1.25rem 0;
    font-style: italic;
  }

  .product-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .product-category {
    border: 1px solid var(--border);
    border-radius: 6px;
    overflow: hidden;
  }

  .cat-label {
    font-size: 0.8rem;
    font-weight: 600;
    margin: 0;
    padding: 0.6rem 1rem;
    background: var(--card-bg);
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cat-icon {
    font-style: normal;
  }

  .cat-count {
    font-size: 0.65rem;
    color: var(--text-muted);
    margin-left: auto;
    background: var(--card-bg);
    padding: 0.1rem 0.4rem;
    border-radius: 2px;
  }

  .product-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 0;
  }

  .mcp-list {
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
  }

  .product-card {
    display: flex;
    flex-direction: column;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: inherit;
    border: none;
    border-bottom: 1px solid var(--border);
    border-right: 1px solid var(--border);
    transition: all 0.15s ease;
  }

  .product-card:hover {
    background: var(--card-bg);
  }

  .product-card:hover .product-name {
    color: var(--primary);
  }

  .product-card.compact {
    padding: 0.5rem 0.75rem;
  }

  .product-name {
    font-size: 0.8rem;
    font-weight: 600;
    transition: color 0.15s ease;
  }

  .product-desc {
    font-size: 0.7rem;
    color: var(--text-muted);
    margin-top: 0.2rem;
    line-height: 1.4;
  }

  .nav-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .nav-card {
    display: flex;
    flex-direction: column;
    padding: 0.75rem 1rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .nav-card:hover {
    border-color: var(--primary);
    transform: translateY(-1px);
  }

  .nav-card:hover .nav-name {
    color: var(--primary);
  }

  .nav-name {
    font-size: 0.85rem;
    font-weight: 600;
    transition: color 0.15s ease;
  }

  .nav-desc {
    font-size: 0.7rem;
    color: var(--text-muted);
    margin-top: 0.2rem;
  }

  @media (max-width: 640px) {
    .hero {
      min-height: calc(100dvh - 8rem);
    }

    .hero-name {
      font-size: 2.2rem;
    }

    .hero-actions {
      flex-direction: column;
    }

    .action-primary,
    .action-secondary {
      justify-content: center;
    }

    .product-list {
      grid-template-columns: 1fr;
    }

    .mcp-list {
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    }

    .nav-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
