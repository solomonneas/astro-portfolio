    margin: 0 0 0.5rem 0;
    color: var(--primary);
    line-height: 1.1;
  }

  .subtitle {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cat-icon {
    font-size: 1.2rem;
  }

  .section-rule {
    border: none;
    border-top: 1px solid var(--border);
    margin: 0 0 1.5rem 0;
  }

  .featured-section {
    margin-bottom: 3rem;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .hero-card {
    display: flex;
    flex-direction: column;
    padding: 1.75rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.25s ease;
  }

  .hero-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
    border-color: var(--primary);
  }

  .hero-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .highlight-badge {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
  }

  .highlight-badge.savings {
    background: var(--blockquote-bg);
    color: var(--tertiary);
  }

  .highlight-badge.label {
    background: color-mix(in srgb, var(--secondary) 12%, transparent);
