  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.7rem;
    font-weight: 500;
    color: var(--text-muted);
  }

  .status-badge.small {
    font-size: 0.65rem;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    display: inline-block;
  }

  .status-dot.ongoing {
    background: var(--primary);
    box-shadow: 0 0 6px color-mix(in srgb, var(--primary) 60%, transparent);
    animation: pulse 2s ease-in-out infinite;
  }

  .status-check {
    color: var(--text-muted);
    font-size: 0.75rem;
    font-weight: 700;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
