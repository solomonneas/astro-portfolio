---

<Layout pageTitle="Projects">
  <section class="projects-terminal">
    <header class="terminal-header">
      <div class="header-left">
        <StatusLight status="ongoing" />
        <span class="status-text">MONITORING</span>
      </div>
      <h1>$ tail -f /var/log/projects.log</h1>
    </header>

    <div class="terminal-body">
      <p class="log-meta">
        [+] Displaying {projects.length} project entries | Last updated: {new Date().toISOString().split("T")[0]}
      </p>

      <div class="log-entries">
      {
        projects.map((project) => (
          <article class="log-entry group">
            <div class="entry-header">
              <span class="entry-date">[{project.date}]</span>
              <span class="entry-divider">|</span>
              <span class="entry-status">
                STATUS: {project.status === "ongoing" ? "ONGOING" : "COMPLETED"}
                <StatusLight status={project.status} />
              </span>
            </div>

            <div class="entry-body">
              <div class="entry-field">
                <span class="field-label">&gt;&gt; IDENTIFIER:</span>
                {project.href ? (
                  <a href={project.href} class="field-value identifier-link">
                    {project.identifier}
                  </a>
                ) : (
                  <span class="field-value identifier">{project.identifier}</span>
                )}
              </div>

              <div class="entry-field">
                <span class="field-label">&gt;&gt; ORIGIN:</span>
                <span class="field-value">{project.origin}</span>
              </div>

              <div class="entry-field">
                <span class="field-label">&gt;&gt; DESCRIPTION:</span>
                <span class="field-value description">{project.description}</span>
              </div>

              <div class="entry-field tech-row">
                <span class="field-label">&gt;&gt; TECH_STACK:</span>
                <div class="tech-badges">
                  {project.techStack.map((tech) => (
                    <span class="tech-badge">[{tech}]</span>
                  ))}
                </div>
              </div>

              {project.href && (
                <div class="entry-field case-study">
                  <span class="field-label">~</span>
                  <a href={project.href} class="case-study-link">
                    &gt; View Case Study: {project.identifier}.log
                  </a>
                </div>
              )}
            </div>

            <div class="entry-divider-line" />
          </article>
        ))
      }
      </div>

      <!-- Navigation -->
      <div class="nav-section">
        <p class="nav-comment">// Continue exploring</p>
        <div class="nav-links">
          <a href="/experience" class="nav-link">$ cd /experience</a>
          <a href="/hire" class="nav-link">$ cd /hire</a>
          <a href="/blog" class="nav-link">$ cd /blog</a>
        </div>
      </div>

      <!-- Footer -->
      <div class="terminal-footer">
        <span class="cursor-blink">â–ˆ</span> EOF
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Terminal Wrapper */
  .projects-terminal {
    font-family: "IBM Plex Mono", monospace;
    max-width: 52rem;
    margin: 0 auto;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-bottom: none;
    border-radius: 6px 6px 0 0;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .status-text {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #10b981;
  }

  .terminal-header h1 {
    font-size: 1rem;
    font-weight: 500;
    margin: 0;
    opacity: 0.8;
  }

  .terminal-body {
    padding: 1.5rem 1.25rem 1.25rem;
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-top: none;
    border-radius: 0 0 6px 6px;
    background: color-mix(in srgb, currentColor 2%, transparent);
  }

  .log-meta {
    font-size: 0.75rem;
    opacity: 0.5;
    margin: 0 0 1.5rem 0;
  }

  /* Log entries container */
  .log-entries {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Individual log entry */
  .log-entry {
    padding: 1.25rem;
    background: color-mix(in srgb, currentColor 3%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    border-radius: 4px;
    margin-bottom: 1rem;
    transition:
      background 0.2s ease,
      border-color 0.2s ease;
  }

  .log-entry:hover {
    background: color-mix(in srgb, currentColor 7%, transparent);
    border-color: color-mix(in srgb, currentColor 20%, transparent);
  }

  /* Entry header with date and status */
  .entry-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    flex-wrap: wrap;
  }

  .entry-date {
    font-weight: 600;
    color: #10b981;
  }

  .entry-divider {
    opacity: 0.4;
  }

  .entry-status {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  /* Entry body with fields */
  .entry-body {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .entry-field {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 0.8rem;
    line-height: 1.5;
  }

  .field-label {
    color: #10b981;
    font-weight: 600;
    flex-shrink: 0;
    min-width: 120px;
  }

  .field-value {
    opacity: 0.85;
  }

  .field-value.identifier {
    color: #10b981;
    font-weight: 700;
    font-size: 1.1em;
    letter-spacing: 0.02em;
    opacity: 0.7;
  }

  .field-value.description {
    max-width: 60ch;
  }

  .identifier-link,
  .identifier-link:visited {
    color: #10b981;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1em;
    letter-spacing: 0.02em;
    transition: all 0.2s ease;
    padding: 0.15rem 0.4rem;
    margin: -0.15rem -0.4rem;
    border-radius: 3px;
    background: transparent;
    border-bottom: none;
  }

  .identifier-link:hover {
    background: color-mix(in srgb, #10b981 15%, transparent);
    color: #34d399;
    text-shadow: 0 0 8px rgba(16, 185, 129, 0.3);
    border-bottom: none;
  }

  /* Tech stack badges */
  .tech-row {
    flex-wrap: wrap;
  }

  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-badge {
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 15%, transparent);
    border-radius: 2px;
    opacity: 0.7;
  }

  /* Case study link */
  .case-study {
    margin-top: 0.5rem;
  }

  .case-study-link,
  .case-study-link:visited {
    color: currentColor;
    text-decoration: none;
    opacity: 0.6;
    font-size: 0.75rem;
    border-bottom: none;
    background: transparent;
    transition:
      opacity 0.2s ease,
      color 0.2s ease;
  }

  .case-study-link:hover {
    opacity: 1;
    color: #10b981;
    background: transparent;
    border-bottom: none;
  }

  /* Divider line */
  .entry-divider-line {
    display: none;
  }

  /* Navigation */
  .nav-section {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px dashed color-mix(in srgb, currentColor 15%, transparent);
  }

  .nav-comment {
    font-size: 0.75rem;
    opacity: 0.5;
    margin: 0 0 0.75rem 0;
    font-style: italic;
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .nav-link,
  .nav-link:visited {
    font-size: 0.8rem;
    color: inherit;
    text-decoration: none;
    opacity: 0.6;
    transition: all 0.2s ease;
    padding: 0.4rem 0.75rem;
    border: 1px solid transparent;
    border-radius: 3px;
    border-bottom: none;
    background: transparent;
  }

  .nav-link:hover {
    opacity: 1;
    color: #10b981;
    border-color: color-mix(in srgb, #10b981 30%, transparent);
    background: color-mix(in srgb, #10b981 5%, transparent);
    border-bottom: none;
  }

  /* Footer */
  .terminal-footer {
    margin-top: 1.5rem;
    font-size: 0.8rem;
    opacity: 0.5;
  }

  .cursor-blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    from, to { opacity: 1; }
    50% { opacity: 0; }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .terminal-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .entry-field {
      flex-direction: column;
      gap: 0.25rem;
    }

    .field-label {
      min-width: auto;
    }

    .entry-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
