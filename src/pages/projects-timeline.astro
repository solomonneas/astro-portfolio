---
import Layout from "../layouts/Layout.astro";
import StatusLight from "../components/StatusLight.astro";

// Featured projects (top showcase for recruiters)
const featuredProjects = [
    ],
  },
];

const totalProjects = featuredProjects.length + categories.reduce((sum, cat) => sum + cat.projects.length, 0);

// Build a flat sorted timeline of ALL projects from categories (chronological, newest first)
const allTimelineProjects = categories.flatMap(cat =>
  cat.projects.map(p => ({ ...p, categoryName: cat.name, categoryIcon: cat.icon, categoryColor: cat.color }))
).sort((a, b) => b.date.localeCompare(a.date));

// Check if a project is featured
const featuredIds = new Set(featuredProjects.map(p => p.identifier));
---

<Layout pageTitle="Projects">
  <section class="timeline-page">
    <header class="page-header">
      <h1>My Journey</h1>
      <p class="subtitle">Here's what I've been building, in order. {totalProjects} projects and counting.</p>
    </header>

    <!-- Featured Spotlight -->
    <div class="featured-spotlight">
      <h2 class="spotlight-label">&#9733; Highlighted Work</h2>
      <div class="spotlight-row">
        {featuredProjects.slice(0, 3).map((project) => (
          <a href={project.href} class="spotlight-card">
            <span class={`spotlight-highlight ${project.highlight.includes('$') ? 'savings' : ''}`}>
              {project.highlight}
            </span>
            <h3>{project.identifier.replace(/_/g, " ")}</h3>
            <p>{project.description}</p>
            <div class="spotlight-tech">
              {project.techStack.slice(0, 3).map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Timeline -->
    <div class="timeline-container">
      <div class="timeline-line" aria-hidden="true"></div>

      {allTimelineProjects.map((project, i) => {
        const isFeatured = featuredIds.has(project.identifier);
        const side = i % 2 === 0 ? "left" : "right";
        return (
          <div class={`timeline-item ${side} ${isFeatured ? 'featured' : ''}`}>
            <div class="timeline-dot" style={`border-color: ${project.categoryColor}; ${isFeatured ? `box-shadow: 0 0 12px ${project.categoryColor}40` : ''}`}>
              {isFeatured && <span class="dot-star">&#9733;</span>}
            </div>

            <div class="timeline-date-col">
              <span class="timeline-date">{project.date}</span>
              <span class="timeline-cat" style={`color: ${project.categoryColor}`}>
                {project.categoryIcon} {project.categoryName}
              </span>
            </div>

            <div class={`timeline-content ${isFeatured ? 'featured-content' : ''}`} style={isFeatured ? `border-color: ${project.categoryColor}` : ''}>
              <div class="content-header">
                <StatusLight status={project.status} />
                <span class="content-status">{project.status === "ongoing" ? "Ongoing" : "Completed"}</span>
              </div>
              {project.href ? (
                <a href={project.href} class="content-title-link">
                  <h3 class="content-title">{project.identifier.replace(/_/g, " ")}</h3>
                </a>
              ) : (
                <h3 class="content-title">{project.identifier.replace(/_/g, " ")}</h3>
              )}
              <p class="content-origin">{project.origin}</p>
              <p class="content-desc">{project.description}</p>
              <div class="content-tech">
                {project.techStack.map((tech) => (
                  <span class="tech-tag" style={`border-color: ${project.categoryColor}30; color: ${project.categoryColor}`}>{tech}</span>
                ))}
              </div>
              {project.href && (
                <a href={project.href} class="content-link" style={`color: ${project.categoryColor}`}>
                  Read more &rarr;
                </a>
              )}
            </div>
          </div>
        );
      })}
    </div>

    <!-- Navigation -->
    <nav class="nav-section">
      <p class="nav-label">Continue exploring</p>
      <div class="nav-links">
        <a href="/experience" class="nav-link">Experience</a>
        <a href="/hire" class="nav-link">Hire Me</a>
        <a href="/blog" class="nav-link">Blog</a>
      </div>
    </nav>
  </section>
</Layout>

<style>
  .timeline-page {
    max-width: 60rem;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.03em;
  }

  .subtitle {
    font-size: 1rem;
    opacity: 0.55;
    margin: 0;
  }

  /* Featured Spotlight */
  .featured-spotlight {
    margin-bottom: 3rem;
  }

  .spotlight-label {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    text-align: center;
    opacity: 0.7;
  }

  .spotlight-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .spotlight-card {
    padding: 1.25rem;
    background: color-mix(in srgb, currentColor 3%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    border-radius: 10px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .spotlight-card:hover {
    transform: translateY(-2px);
    border-color: color-mix(in srgb, currentColor 20%, transparent);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
  }

  .spotlight-highlight {
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #3b82f6;
    display: block;
    margin-bottom: 0.5rem;
  }

  .spotlight-highlight.savings {
    color: #f59e0b;
  }

  .spotlight-card h3 {
    font-size: 0.95rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .spotlight-card p {
    font-size: 0.75rem;
    line-height: 1.5;
    opacity: 0.7;
    margin: 0 0 0.75rem 0;
  }

  .spotlight-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
  }

  /* Timeline */
  .timeline-container {
    position: relative;
    padding: 1rem 0;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: color-mix(in srgb, currentColor 12%, transparent);
    transform: translateX(-50%);
  }

  .timeline-item {
    position: relative;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1.5rem;
    align-items: start;
    margin-bottom: 2rem;
  }

  /* Dot in center */
  .timeline-dot {
    grid-column: 2;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 3px solid color-mix(in srgb, currentColor 25%, transparent);
    background: var(--color-bg-primary, #0a0a0a);
    z-index: 2;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 0.75rem;
  }

  .timeline-item.featured .timeline-dot {
    width: 22px;
    height: 22px;
  }

  .dot-star {
    font-size: 0.5rem;
    color: #f59e0b;
    line-height: 1;
  }

  /* Left items: date on left, content on right */
  .timeline-item.left .timeline-date-col {
    grid-column: 1;
    text-align: right;
  }

  .timeline-item.left .timeline-content {
    grid-column: 3;
  }

  /* Right items: content on left, date on right */
  .timeline-item.right .timeline-date-col {
    grid-column: 3;
    text-align: left;
  }

  .timeline-item.right .timeline-content {
    grid-column: 1;
    grid-row: 1;
  }

  .timeline-date-col {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding-top: 0.6rem;
  }

  .timeline-date {
    font-size: 0.85rem;
    font-weight: 600;
    opacity: 0.8;
  }

  .timeline-cat {
    font-size: 0.7rem;
    font-weight: 500;
  }

  /* Content card */
  .timeline-content {
    padding: 1.25rem;
    background: color-mix(in srgb, currentColor 3%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    border-radius: 10px;
    transition: all 0.2s ease;
  }

  .timeline-content:hover {
    background: color-mix(in srgb, currentColor 5%, transparent);
    border-color: color-mix(in srgb, currentColor 18%, transparent);
  }

  .featured-content {
    border-width: 2px;
    background: color-mix(in srgb, currentColor 4%, transparent);
  }

  .content-header {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    margin-bottom: 0.5rem;
  }

  .content-status {
    font-size: 0.7rem;
    opacity: 0.6;
    font-weight: 500;
  }

  .content-title-link {
    text-decoration: none;
    color: inherit;
  }

  .content-title-link:hover .content-title {
    opacity: 0.7;
  }

  .content-title {
    font-size: 1rem;
    font-weight: 700;
    margin: 0 0 0.2rem 0;
    line-height: 1.3;
    transition: opacity 0.2s ease;
  }

  .timeline-item.featured .content-title {
    font-size: 1.1rem;
  }

  .content-origin {
    font-size: 0.7rem;
    opacity: 0.5;
    margin: 0 0 0.5rem 0;
  }

  .content-desc {
    font-size: 0.78rem;
    line-height: 1.55;
    opacity: 0.7;
    margin: 0 0 0.75rem 0;
  }

  .content-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
    margin-bottom: 0.5rem;
  }

  .tech-tag {
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent);
    background: color-mix(in srgb, currentColor 3%, transparent);
  }

  .content-link {
    font-size: 0.7rem;
    font-weight: 500;
    text-decoration: none;
    opacity: 0.8;
    transition: opacity 0.2s ease;
    display: inline-block;
    margin-top: 0.25rem;
  }

  .content-link:hover {
    opacity: 1;
  }

  /* Navigation */
  .nav-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    text-align: center;
  }

  .nav-label {
    font-size: 0.85rem;
    opacity: 0.4;
    margin: 0 0 1rem 0;
  }

  .nav-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .nav-link {
    font-size: 0.85rem;
    font-weight: 500;
    color: inherit;
    text-decoration: none;
    padding: 0.5rem 1.25rem;
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent);
    border-radius: 8px;
    transition: all 0.2s ease;
    opacity: 0.6;
  }

  .nav-link:hover {
    opacity: 1;
    border-color: #10b981;
    color: #10b981;
    background: rgba(16, 185, 129, 0.05);
  }

  /* Mobile: single-side timeline */
  @media (max-width: 768px) {
    .timeline-page {
      padding: 1.5rem 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .spotlight-row {
      grid-template-columns: 1fr;
    }

    .timeline-line {
      left: 20px;
    }

    .timeline-item {
      display: flex;
      flex-direction: column;
      padding-left: 48px;
      gap: 0;
    }

    .timeline-dot {
      position: absolute;
      left: 12px;
      top: 0;
    }

    .timeline-item.featured .timeline-dot {
      left: 9px;
    }

    .timeline-item.left .timeline-date-col,
    .timeline-item.right .timeline-date-col {
      text-align: left;
      grid-column: unset;
    }

    .timeline-item.left .timeline-content,
    .timeline-item.right .timeline-content {
      grid-column: unset;
      grid-row: unset;
    }

    .timeline-date-col {
      flex-direction: row;
      gap: 0.75rem;
      align-items: center;
      margin-bottom: 0.5rem;
      padding-top: 0;
    }

    .timeline-content {
      padding: 1rem;
    }
  }
</style>
