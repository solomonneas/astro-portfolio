).sort((a, b) => b.date.localeCompare(a.date));

// Check if a project is featured
const featuredIds = new Set(featuredProjects.map(p => p.identifier));
---

<Layout pageTitle="Projects">
  <section class="timeline-page">
    <header class="page-header">
      <h1>My Journey</h1>
      <p class="subtitle">Here's what I've been building, in order. {totalProjects} projects and counting.</p>
    </header>

    <!-- Featured Spotlight -->
    <div class="featured-spotlight">
      <h2 class="spotlight-label">&#9733; Highlighted Work</h2>
      <div class="spotlight-row">
        {featuredProjects.slice(0, 3).map((project) => (
          <a href={project.href} class="spotlight-card">
            <span class={`spotlight-highlight ${project.highlight.includes('$') ? 'savings' : ''}`}>
              {project.highlight}
            </span>
            <h3>{project.identifier.replace(/_/g, " ")}</h3>
            <p>{project.description}</p>
            <div class="spotlight-tech">
              {project.techStack.slice(0, 3).map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Timeline -->
    <div class="timeline-container">
      <div class="timeline-line" aria-hidden="true"></div>

      {allTimelineProjects.map((project, i) => {
        const isFeatured = featuredIds.has(project.identifier);
        const side = i % 2 === 0 ? "left" : "right";
        return (
          <div class={`timeline-item ${side} ${isFeatured ? 'featured' : ''}`}>
            <div class="timeline-dot" style={`border-color: ${project.categoryColor}; ${isFeatured ? `box-shadow: 0 0 12px ${project.categoryColor}40` : ''}`}>
              {isFeatured && <span class="dot-star">&#9733;</span>}
            </div>

            <div class="timeline-date-col">
              <span class="timeline-date">{project.date}</span>
              <span class="timeline-cat" style={`color: ${project.categoryColor}`}>
                {project.categoryIcon} {project.categoryName}
              </span>
            </div>

            <div class={`timeline-content ${isFeatured ? 'featured-content' : ''}`} style={isFeatured ? `border-color: ${project.categoryColor}` : ''}>
              <div class="content-header">
                <StatusLight status={project.status} />
                <span class="content-status">{project.status === "ongoing" ? "Ongoing" : "Completed"}</span>
              </div>
              {project.href ? (
                <a href={project.href} class="content-title-link">
                  <h3 class="content-title">{project.identifier.replace(/_/g, " ")}</h3>
                </a>
              ) : (
                <h3 class="content-title">{project.identifier.replace(/_/g, " ")}</h3>
              )}
              <p class="content-origin">{project.origin}</p>
              <p class="content-desc">{project.description}</p>
              <div class="content-tech">
                {project.techStack.map((tech) => (
                  <span class="tech-tag" style={`border-color: ${project.categoryColor}30; color: ${project.categoryColor}`}>{tech}</span>
                ))}
              </div>
              {project.href && (
                <a href={project.href} class="content-link" style={`color: ${project.categoryColor}`}>
                  Read more &rarr;
                </a>
              )}
            </div>
          </div>
        );
      })}
    </div>

    <!-- Navigation -->
    <nav class="nav-section">
      <p class="nav-label">Continue exploring</p>
      <div class="nav-links">
        <a href="/experience" class="nav-link">Experience</a>
        <a href="/hire" class="nav-link">Hire Me</a>
        <a href="/blog" class="nav-link">Blog</a>
      </div>
    </nav>
  </section>
</Layout>

