            <div class="item-main">
              <h3 class="item-title featured-title">{project.identifier.replace(/_/g, " ")}</h3>
              <p class="item-desc featured-desc">{project.description}</p>
              <div class="item-tech">
                {project.techStack.map((tech) => (
                  <span class="tech">{tech}</span>
                ))}
              </div>
            </div>
            <div class="item-meta">
              <span class={`item-highlight ${project.highlight.includes('$') ? 'savings' : ''}`}>{project.highlight}</span>
              <span class="item-date">{project.date}</span>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Categories -->
    {categories.map((category) => (
      <div class="category-section">
        <h2 class="section-label">{category.name}</h2>
        <div class="list">
          {category.projects.map((project) => {
            return project.href ? (
              <a href={project.href} class="list-item">
                <div class="item-main">
                  <h3 class="item-title">{project.identifier.replace(/_/g, " ")}</h3>
