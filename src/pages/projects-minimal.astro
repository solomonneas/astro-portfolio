---
import Layout from "../layouts/Layout.astro";
import StatusLight from "../components/StatusLight.astro";

// Featured projects (top showcase for recruiters)
const featuredProjects = [
    ],
  },
];

const allIdentifiers = new Set([
  ...featuredProjects.map(p => p.identifier),
  ...categories.flatMap(cat => cat.projects.map(p => p.identifier)),
]);
const totalProjects = allIdentifiers.size;
---

<Layout pageTitle="Projects">
  <section class="minimal-page">
    <header class="page-header">
      <h1>Projects</h1>
      <p class="count">{totalProjects} projects</p>
    </header>

    <!-- Featured -->
    <div class="featured-section">
      <h2 class="section-label">Featured</h2>
      <div class="list">
        {featuredProjects.map((project) => (
          <a href={project.href} class="list-item featured-item">
            <div class="item-main">
              <h3 class="item-title featured-title">{project.identifier.replace(/_/g, " ")}</h3>
              <p class="item-desc featured-desc">{project.description}</p>
              <div class="item-tech">
                {project.techStack.map((tech) => (
                  <span class="tech">{tech}</span>
                ))}
              </div>
            </div>
            <div class="item-meta">
              <span class={`item-highlight ${project.highlight.includes('$') ? 'savings' : ''}`}>{project.highlight}</span>
              <span class="item-date">{project.date}</span>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Categories -->
    {categories.map((category) => (
      <div class="category-section">
        <h2 class="section-label">{category.name}</h2>
        <div class="list">
          {category.projects.map((project) => {
            return project.href ? (
              <a href={project.href} class="list-item">
                <div class="item-main">
                  <h3 class="item-title">{project.identifier.replace(/_/g, " ")}</h3>
                  <p class="item-desc">{project.description}</p>
                  <div class="item-tech">
                    {project.techStack.map((tech) => (
                      <span class="tech">{tech}</span>
                    ))}
                  </div>
                </div>
                <div class="item-meta">
                  <StatusLight status={project.status} />
                  <span class="item-date">{project.date}</span>
                </div>
              </a>
            ) : (
              <div class="list-item">
                <div class="item-main">
                  <h3 class="item-title">{project.identifier.replace(/_/g, " ")}</h3>
                  <p class="item-desc">{project.description}</p>
                  <div class="item-tech">
                    {project.techStack.map((tech) => (
                      <span class="tech">{tech}</span>
                    ))}
                  </div>
                </div>
                <div class="item-meta">
                  <StatusLight status={project.status} />
                  <span class="item-date">{project.date}</span>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    ))}

    <!-- Navigation -->
    <nav class="nav-section">
      <div class="nav-links">
        <a href="/experience" class="nav-link">Experience</a>
        <a href="/hire" class="nav-link">Hire Me</a>
        <a href="/blog" class="nav-link">Blog</a>
      </div>
    </nav>
  </section>
</Layout>

<style>
  .minimal-page {
    max-width: 48rem;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Segoe UI", sans-serif;
  }

  /* Header */
  .page-header {
    margin-bottom: 3.5rem;
  }

  .page-header h1 {
    font-size: 2.75rem;
    font-weight: 700;
    margin: 0;
    letter-spacing: -0.04em;
    line-height: 1.1;
  }

  .count {
    font-size: 0.9rem;
    opacity: 0.35;
    margin: 0.5rem 0 0 0;
    font-weight: 400;
  }

  /* Section Labels */
  .section-label {
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.4;
    margin: 0 0 1rem 0;
  }

  .featured-section .section-label {
    font-size: 0.85rem;
    opacity: 0.5;
  }

  /* List */
  .list {
    display: flex;
    flex-direction: column;
  }

  .list-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    padding: 1.25rem 1rem;
    margin: 0 -1rem;
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: background 0.15s ease;
  }

  a.list-item:hover {
    background: color-mix(in srgb, currentColor 4%, transparent);
  }

  .item-main {
    flex: 1;
    min-width: 0;
  }

  .item-title {
    font-size: 0.95rem;
    font-weight: 600;
    margin: 0 0 0.3rem 0;
    line-height: 1.3;
  }

  .featured-title {
    font-size: 1.1rem;
    font-weight: 700;
  }

  .item-desc {
    font-size: 0.8rem;
    line-height: 1.5;
    opacity: 0.55;
    margin: 0 0 0.5rem 0;
  }

  .featured-desc {
    font-size: 0.85rem;
    opacity: 0.6;
  }

  .item-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech {
    font-size: 0.65rem;
    font-weight: 500;
    opacity: 0.4;
    letter-spacing: 0.02em;
  }

  .item-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.35rem;
    flex-shrink: 0;
    padding-top: 0.15rem;
  }

  .item-highlight {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #3b82f6;
    white-space: nowrap;
  }

  .item-highlight.savings {
    color: #f59e0b;
  }

  .item-date {
    font-size: 0.7rem;
    opacity: 0.3;
    font-variant-numeric: tabular-nums;
  }

  /* Category */
  .category-section {
    margin-top: 2.5rem;
  }

  .featured-section {
    margin-bottom: 1rem;
  }

  /* Navigation */
  .nav-section {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid color-mix(in srgb, currentColor 8%, transparent);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-size: 0.85rem;
    font-weight: 500;
    color: inherit;
    text-decoration: none;
    opacity: 0.4;
    transition: opacity 0.15s ease;
  }

  .nav-link:hover {
    opacity: 0.8;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .minimal-page {
      padding: 2rem 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .list-item {
      flex-direction: column;
      gap: 0.5rem;
      padding: 1rem 0.75rem;
      margin: 0 -0.75rem;
    }

    .item-meta {
      flex-direction: row;
      align-items: center;
      gap: 0.75rem;
    }

    .nav-links {
      gap: 1.5rem;
    }
  }
</style>
