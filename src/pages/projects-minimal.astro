  .list {
    display: flex;
    flex-direction: column;
  }

  .list-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    padding: 1.25rem 1rem;
    margin: 0 -1rem;
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: background 0.15s ease;
  }

  a.list-item:hover {
    background: color-mix(in srgb, currentColor 4%, transparent);
  }

  .item-main {
    flex: 1;
    min-width: 0;
  }

  .item-title {
    font-size: 0.95rem;
    font-weight: 600;
    margin: 0 0 0.3rem 0;
    line-height: 1.3;
  }

  .featured-title {
    font-size: 1.1rem;
    font-weight: 700;
  }

  .item-desc {
    font-size: 0.8rem;
    line-height: 1.5;
    opacity: 0.55;
    margin: 0 0 0.5rem 0;
  }

  .featured-desc {
    font-size: 0.85rem;
    opacity: 0.6;
  }

  .item-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech {
    font-size: 0.65rem;
    font-weight: 500;
    opacity: 0.4;
    letter-spacing: 0.02em;
  }

  .item-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.35rem;
    flex-shrink: 0;
    padding-top: 0.15rem;
  }

  .item-highlight {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #3b82f6;
    white-space: nowrap;
  }

  .item-highlight.savings {
    color: #f59e0b;
  }

  .item-date {
    font-size: 0.7rem;
    opacity: 0.3;
    font-variant-numeric: tabular-nums;
  }

  /* Category */
  .category-section {
    margin-top: 2.5rem;
  }

  .featured-section {
    margin-bottom: 1rem;
  }

  /* Navigation */
  .nav-section {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid color-mix(in srgb, currentColor 8%, transparent);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-size: 0.85rem;
    font-weight: 500;
    color: inherit;
    text-decoration: none;
    opacity: 0.4;
    transition: opacity 0.15s ease;
  }

  .nav-link:hover {
    opacity: 0.8;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .minimal-page {
      padding: 2rem 1rem;
    }

    .page-header h1 {
