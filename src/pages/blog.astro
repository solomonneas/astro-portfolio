---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const allPosts = await getCollection("blog");
allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date) {
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, "0");
  const day = String(date.getDate()).padStart(2, "0");
  return `${year}.${month}.${day}`;
}

// Extract description from first paragraph if not in frontmatter
function getDescription(post: any): string | null {
  if (post.data.description) return post.data.description;
  
  // Extract first paragraph from body (skip frontmatter)
  const body = post.body || '';
  const lines = body.split('\n').filter(line => line.trim() && !line.startsWith('#'));
  if (lines.length > 0) {
    const firstPara = lines[0].trim();
    if (firstPara.length > 20) {
      return firstPara.length > 140 ? firstPara.substring(0, 140) + '...' : firstPara;
    }
  }
  return null;
}

// Group by year
const grouped = allPosts.reduce((acc, post) => {
  const year = post.data.pubDate.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {});

const years = Object.keys(grouped).sort((a, b) => b - a);
---

<Layout pageTitle="Blog">
  <section class="blog-page">
    <header class="page-header">
      <p class="prompt">$ ls ~/blog</p>
      <h1>Blog</h1>
      <p class="subtitle">{allPosts.length} posts on security, infrastructure, and building things</p>
    </header>

    <div class="blog-entries">
      {years.map(year => (
        <div class="year-group">
          <div class="year-header">
            <span class="year-prompt">$</span>
            <span class="year-label">{year}</span>
          </div>
          {grouped[year].map((post) => {
            const desc = getDescription(post);
            return (
              <a href={`/blog/${post.slug}`} class="blog-entry">
                <span class="entry-date">{formatDate(post.data.pubDate)}</span>
                <div class="entry-content">
                  <span class="entry-title">{post.data.title}</span>
                  {desc && (
                    <span class="entry-desc">{desc}</span>
                  )}
                  {post.data.tags && (
                    <div class="entry-tags">
                      {post.data.tags.slice(0, 3).map((tag: string) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
                <span class="entry-arrow">â†’</span>
              </a>
            );
          })}
        </div>
      ))}
    </div>

    {allPosts.length === 0 && (
      <div class="empty-state">
        <p class="empty-prompt">$ cat /dev/null</p>
        <p class="empty-text">No posts yet. Check back soon.</p>
      </div>
    )}

    <nav class="page-nav">
      <a href="/projects" class="page-nav-link">Projects</a>
      <a href="/experience" class="page-nav-link">Experience</a>
      <a href="/hire" class="page-nav-link">Hire Me</a>
    </nav>
  </section>
</Layout>

<style>
  .blog-page {
    max-width: 52rem;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  /* Reset globals */
  .blog-page a,
  .blog-page a:visited {
    font-size: inherit;
    border-bottom: none;
    color: inherit;
  }
  .blog-page a:hover {
    border-bottom: none;
  }
  .blog-page p {
    text-align: left;
  }
  .blog-page h1 {
    font-family: "IBM Plex Mono", monospace;
  }

  /* Page Header */
  .page-header {
    margin-bottom: 3rem;
  }

  .prompt {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
    opacity: 0.4;
    margin: 0 0 0.5rem 0;
  }

  .page-header h1 {
    font-family: "IBM Plex Mono", monospace;
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: #10b981;
    line-height: 1.1;
  }

  .subtitle {
    font-size: 0.9rem;
    opacity: 0.6;
    margin: 0;
  }

  /* Blog Entries */
  .blog-entries {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .year-group {
    display: flex;
    flex-direction: column;
  }

  .year-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    padding: 0 0.75rem 0.5rem;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    color: #10b981;
    opacity: 0.7;
    border-bottom: 1px solid color-mix(in srgb, currentColor 8%, transparent);
  }

  .year-prompt {
    opacity: 0.5;
  }

  .year-label {
    font-weight: 600;
  }

  .blog-entry {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    padding: 1rem 0.75rem;
    border-bottom: 1px solid color-mix(in srgb, currentColor 5%, transparent);
    text-decoration: none;
    color: currentColor;
    transition: all 0.2s ease;
  }

  .blog-entry:hover {
    background: color-mix(in srgb, #10b981 3%, transparent);
    border-color: color-mix(in srgb, #10b981 15%, transparent);
  }

  .entry-date {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    color: #10b981;
    opacity: 0.8;
    font-weight: 500;
    flex-shrink: 0;
    margin-top: 0.15rem;
  }

  .entry-content {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    flex: 1;
    min-width: 0;
  }

  .entry-title {
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.4;
  }

  .entry-desc {
    font-size: 0.85rem;
    opacity: 0.75;
    line-height: 1.5;
  }

  .entry-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.25rem;
  }

  .tag {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.65rem;
    opacity: 0.6;
    padding: 0.1rem 0.4rem;
    border: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    border-radius: 3px;
  }

  .entry-arrow {
    font-size: 1rem;
    opacity: 0.2;
    flex-shrink: 0;
    transition: all 0.2s ease;
    margin-top: 0.15rem;
  }

  .blog-entry:hover .entry-arrow {
    opacity: 0.6;
    color: #10b981;
    transform: translateX(3px);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 1rem;
    opacity: 0.5;
  }

  .empty-prompt {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
    margin: 0 0 0.5rem 0;
  }

  .empty-text {
    font-size: 0.9rem;
    margin: 0;
  }

  /* Navigation */
  .page-nav {
    display: flex;
    gap: 0.75rem;
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid color-mix(in srgb, currentColor 10%, transparent);
  }

  .page-nav-link {
    font-size: 0.8rem;
    padding: 0.4rem 0.75rem;
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent) !important;
    border-radius: 4px;
    opacity: 0.6;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .page-nav-link:hover {
    opacity: 1;
    color: #10b981;
    border-color: color-mix(in srgb, #10b981 30%, transparent) !important;
    background: color-mix(in srgb, #10b981 5%, transparent);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .blog-entry {
      gap: 0.75rem;
    }

    .entry-date {
      font-size: 0.7rem;
    }

    .entry-title {
      font-size: 0.95rem;
    }

    .entry-desc {
      font-size: 0.8rem;
    }
  }
</style>
