---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const allPosts = await getCollection("blog");
// Sort posts by date, newest first
allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Format date as YYYY.MM.DD
function formatDate(date: Date) {
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, "0");
  const day = String(date.getDate()).padStart(2, "0");
  return `${year}.${month}.${day}`;
}
---

<Layout pageTitle="Blog">
  <section class="blog-log">
    <header class="log-header">
      <h1>$ ls ~/blog/</h1>
      <p class="log-meta">[+] {allPosts.length} entries found</p>
    </header>

    <div class="blog-entries">
      {
        allPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="blog-entry">
            <span class="entry-date">[{formatDate(post.data.pubDate)}]</span>
            <span class="entry-title">{post.data.title}</span>
            {post.data.tags && (
              <span class="entry-tags">
                {post.data.tags.map((tag) => (
                  <span class="tag">[{tag}]</span>
                ))}
              </span>
            )}
          </a>
        ))
      }
    </div>

    <footer class="log-footer">
      <span class="cursor-blink">â–ˆ</span> EOF
    </footer>
  </section>
</Layout>

<style>
  .blog-log {
    font-family: "IBM Plex Mono", monospace;
    padding: 2rem 0;
  }

  .log-header h1 {
    font-size: 1.25rem;
    font-weight: 600;
    color: currentColor;
    margin: 0 0 0.5rem 0;
    opacity: 0.9;
  }

  .log-meta {
    font-size: 0.75rem;
    opacity: 0.6;
    margin: 0 0 2rem 0;
  }

  .blog-entries {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .blog-entry {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 0.75rem;
    padding: 0.75rem;
    border-bottom: 1px dotted color-mix(in srgb, currentColor 15%, transparent);
    text-decoration: none;
    color: currentColor;
    transition: background 0.2s ease;
  }

  .blog-entry:first-child {
    border-top: 1px dotted color-mix(in srgb, currentColor 15%, transparent);
  }

  .blog-entry:hover {
    background: color-mix(in srgb, currentColor 5%, transparent);
  }

  .entry-date {
    font-size: 0.8rem;
    color: #10b981;
    font-weight: 500;
    flex-shrink: 0;
  }

  .entry-title {
    font-size: 1rem;
    font-weight: 400;
    flex-grow: 1;
  }

  .entry-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-left: auto;
  }

  .tag {
    font-size: 0.7rem;
    opacity: 0.6;
    padding: 0.1rem 0.3rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    border-radius: 2px;
  }

  .log-footer {
    margin-top: 2rem;
    font-size: 0.8rem;
    opacity: 0.5;
  }

  .cursor-blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    from,
    to {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  @media (max-width: 640px) {
    .blog-entry {
      flex-direction: column;
      gap: 0.25rem;
    }

    .entry-tags {
      margin-top: 0.25rem;
    }
  }
</style>
