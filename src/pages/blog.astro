---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const allPosts = await getCollection("blog");
allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date) {
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, "0");
  const day = String(date.getDate()).padStart(2, "0");
  return `${year}.${month}.${day}`;
}
---

<Layout pageTitle="Blog">
  <section class="blog-page">
    <header class="page-header">
      <p class="prompt">$ ls ~/blog</p>
      <h1>Blog</h1>
      <p class="subtitle">{allPosts.length} posts on security, infrastructure, and building things</p>
    </header>

    <div class="blog-entries">
      {
        allPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="blog-entry">
            <div class="entry-main">
              <span class="entry-date">{formatDate(post.data.pubDate)}</span>
              <span class="entry-title">{post.data.title}</span>
            </div>
            {post.data.tags && (
              <div class="entry-tags">
                {post.data.tags.map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </a>
        ))
      }
    </div>

    {allPosts.length === 0 && (
      <div class="empty-state">
        <p class="empty-prompt">$ cat /dev/null</p>
        <p class="empty-text">No posts yet. Check back soon.</p>
      </div>
    )}

    <nav class="page-nav">
      <a href="/projects" class="page-nav-link">Projects</a>
      <a href="/experience" class="page-nav-link">Experience</a>
      <a href="/hire" class="page-nav-link">Hire Me</a>
    </nav>
  </section>
</Layout>

<style>
  .blog-page {
    max-width: 52rem;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  /* Reset globals */
  .blog-page a,
  .blog-page a:visited {
    font-size: inherit;
    border-bottom: none;
    color: inherit;
  }
  .blog-page a:hover {
    border-bottom: none;
  }
  .blog-page p {
    text-align: left;
  }
  .blog-page h1 {
    font-family: "IBM Plex Mono", monospace;
  }

  /* Page Header */
  .page-header {
    margin-bottom: 3rem;
  }

  .prompt {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
    opacity: 0.4;
    margin: 0 0 0.5rem 0;
  }

  .page-header h1 {
    font-family: "IBM Plex Mono", monospace;
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: #10b981;
    line-height: 1.1;
  }

  .subtitle {
    font-size: 0.9rem;
    opacity: 0.6;
    margin: 0;
  }

  /* Blog Entries */
  .blog-entries {
    display: flex;
    flex-direction: column;
  }

  .blog-entry {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 0.75rem;
    border-bottom: 1px solid color-mix(in srgb, currentColor 10%, transparent);
    text-decoration: none;
    color: currentColor;
    transition: background 0.2s ease;
  }

  .blog-entry:first-child {
    border-top: 1px solid color-mix(in srgb, currentColor 10%, transparent);
  }

  .blog-entry:hover {
    background: color-mix(in srgb, currentColor 4%, transparent);
  }

  .entry-main {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    min-width: 0;
  }

  .entry-date {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
    color: #10b981;
    font-weight: 500;
    flex-shrink: 0;
  }

  .entry-title {
    font-size: 0.95rem;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .entry-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    flex-shrink: 0;
  }

  .tag {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.65rem;
    opacity: 0.5;
    padding: 0.15rem 0.5rem;
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent);
    border-radius: 3px;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 1rem;
    opacity: 0.5;
  }

  .empty-prompt {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
    margin: 0 0 0.5rem 0;
  }

  .empty-text {
    font-size: 0.9rem;
    margin: 0;
  }

  /* Navigation */
  .page-nav {
    display: flex;
    gap: 0.75rem;
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid color-mix(in srgb, currentColor 10%, transparent);
  }

  .page-nav-link {
    font-size: 0.8rem;
    padding: 0.4rem 0.75rem;
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent) !important;
    border-radius: 4px;
    opacity: 0.6;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .page-nav-link:hover {
    opacity: 1;
    color: #10b981;
    border-color: color-mix(in srgb, #10b981 30%, transparent) !important;
    background: color-mix(in srgb, #10b981 5%, transparent);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .blog-entry {
      flex-direction: column;
      gap: 0.5rem;
    }

    .entry-main {
      flex-direction: column;
      gap: 0.25rem;
    }

    .entry-title {
      white-space: normal;
    }
  }
</style>
