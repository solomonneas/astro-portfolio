---

<Layout pageTitle="Projects">
  <section class="cards-page">
    <header class="page-header">
      <h1>Projects</h1>
      <p class="subtitle">{totalProjects} projects across security, infrastructure, and development</p>
    </header>

    <!-- Featured Projects -->
    <div class="featured-section">
      <h2 class="section-title">Featured Work</h2>
      <hr class="section-rule" />
      <div class="featured-grid">
        {featuredProjects.map((project) => (
          <a href={project.href} class="hero-card">
            <div class="hero-top">
              <span class={`highlight-badge ${project.highlight.includes('$') ? 'savings' : 'label'}`}>
                {project.highlight}
              </span>
              <span class={`status-badge ${project.status}`}>
                {project.status === "ongoing" ? (
                  <><span class="status-dot ongoing"></span> Ongoing</>
                ) : (
                  <><span class="status-check">&#10003;</span> Completed</>
                )}
              </span>
            </div>
            <h3 class="hero-title">{project.identifier.replace(/_/g, " ")}</h3>
            <p class="hero-origin">{project.origin}</p>
            <p class="hero-description">{project.description}</p>
            <div class="tech-pills">
              {project.techStack.map((tech) => (
                <span class="tech-pill">{tech}</span>
              ))}
            </div>
            <span class="hero-date">{project.date}</span>
          </a>
        ))}
      </div>
    </div>

    <!-- Categorized Projects -->
    {categories.map((category) => (
      <div class="category-section">
        <h2 class="section-title">
          <span class="cat-icon">{category.icon}</span>
          {category.name}
        </h2>
        <hr class="section-rule" />
        <div class="card-grid">
          {category.projects.map((project) => (
            <div class="project-card">
              <div class="card-header">
                <span class={`status-badge small ${project.status}`}>
                  {project.status === "ongoing" ? (
                    <><span class="status-dot ongoing"></span> Ongoing</>
                  ) : (
                    <><span class="status-check">&#10003;</span> Completed</>
                  )}
                </span>
                <span class="card-date">{project.date}</span>
              </div>
              {project.href ? (
                <a href={project.href} class="card-title-link">
                  <h3 class="card-title">{project.identifier.replace(/_/g, " ")}</h3>
                </a>
              ) : (
                <h3 class="card-title">{project.identifier.replace(/_/g, " ")}</h3>
              )}
              <p class="card-origin">{project.origin}</p>
              <p class="card-description">{project.description}</p>
              <div class="tech-pills">
                {project.techStack.map((tech) => (
                  <span class="tech-pill">{tech}</span>
                ))}
              </div>
              {project.href && (
                <a href={project.href} class="card-link">View Case Study &rarr;</a>
              )}
            </div>
          ))}
        </div>
      </div>
    ))}

    <!-- Navigation -->
    <nav class="nav-section">
