---
// src/components/EducationTerminal.astro
import StatusLight from "./StatusLight.astro";

const education = [
  {
    degree: "Master of Science in Cybersecurity Intelligence & Information Security",
    school: "University of South Florida",
    year: "Current",
    focus: "Cybersecurity & Intelligence Analytics • Data Analytics",
    status: "ongoing",
  },
  {
    degree: "Bachelor of Applied Science in Supervision & Management",
    school: "Polk State College",
    year: "2025",
    focus: "Business Information Technology • Database Implementation & Management",
    status: "completed",
  },
  {
    degree: "Associate in Science in Network Systems Engineering Technology",
    school: "Polk State College",
    year: "2022",
    focus: "Specialization in Network Infrastructure & Systems Engineering",
    status: "completed",
  },
  {
    degree: "Collegiate High School",
    school: "Polk State College",
    year: "2007",
    focus: "IT Program focus on Cisco Networking and Systems Administration",
    status: "completed",
  },
  {
    degree: "Harrison School for the Visual and Performing Arts",
    school: "Lakeland, FL",
    year: "2003-2005",
    focus: "Visual Arts Program",
    status: "completed",
  },
  {
    degree: "Rochelle School of the Arts",
    school: "Lakeland, FL",
    year: null,
    focus: "Orchestra (Cello) and Visual Arts",
    status: "completed",
  },
];
---

<div class="terminal-section">
  <h2 class="section-header">$ tree ~/education/</h2>

  <div class="tree-container">
    <div class="tree-root">.</div>
    {education.map((item, index) => (
      <div class="tree-item" data-last={index === education.length - 1 ? "true" : "false"}>
        <div class="tree-branch">
          <span class="branch-line">{index === education.length - 1 ? "└── " : "├── "}</span>
          <span class="item-title">{item.degree}</span>
          {item.status === "ongoing" && <StatusLight status="ongoing" />}
        </div>
        <div class="tree-children" data-last={index === education.length - 1 ? "true" : "false"}>
          <div class="child-line">
            <span class="branch-line">├── </span>
            <span class="child-text">{item.school}{item.year && ` (${item.year})`}</span>
          </div>
          <div class="child-line">
            <span class="branch-line">└── </span>
            <span class="child-text focus">{item.focus}</span>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .terminal-section {
    font-family: "IBM Plex Mono", monospace;
    padding: 1.5rem;
    background: color-mix(in srgb, currentColor 3%, transparent);
    border: 1px solid color-mix(in srgb, currentColor 12%, transparent);
    border-radius: 6px;
    margin-bottom: 2rem;
  }

  .section-header {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 1.25rem 0;
    color: #10b981;
  }

  .tree-container {
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .tree-root {
    opacity: 0.5;
    margin-bottom: 0.25rem;
  }

  .tree-item {
    margin-bottom: 0.5rem;
  }

  .tree-branch {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .branch-line {
    opacity: 0.35;
    white-space: pre;
    font-family: "IBM Plex Mono", monospace;
  }

  .item-title {
    font-weight: 600;
    color: #10b981;
  }

  .tree-children {
    margin-left: 1.5rem;
    padding-left: 1rem;
    border-left: 1px solid color-mix(in srgb, currentColor 15%, transparent);
  }

  .tree-children[data-last="true"] {
    border-left: 1px solid transparent;
  }

  .child-line {
    display: flex;
    align-items: flex-start;
    padding: 0.1rem 0;
  }

  .child-text {
    opacity: 0.75;
  }

  .child-text.focus {
    opacity: 0.55;
    font-style: italic;
  }
</style>
