---
import Layout from "./Layout.astro";
import StatusLight from "../components/StatusLight.astro";
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
  <article class="project-page">
    <header class="project-header">
      <h1 class="project-title">{frontmatter.title}</h1>
      
      <div class="project-meta">
        <span class="meta-item">
          <span class="meta-label">[+] Status:</span>
          <span class="meta-value">{frontmatter.status || "In Progress"}</span>
          <StatusLight status={frontmatter.statusType || "ongoing"} />
        </span>
        <span class="meta-item">
          <span class="meta-label">[+] Origin:</span>
          <span class="meta-value">{frontmatter.origin || frontmatter.description}</span>
        </span>
        {frontmatter.date && (
          <span class="meta-item">
            <span class="meta-label">[+] Date:</span>
            <span class="meta-value">{frontmatter.date}</span>
          </span>
        )}
      </div>

      {frontmatter.techStack && (
        <div class="tech-stack">
          <span class="stack-label">>> TECH_STACK:</span>
          <div class="stack-badges">
            {frontmatter.techStack.map((tech) => (
              <span class="tech-badge">[{tech}]</span>
            ))}
          </div>
        </div>
      )}
    </header>

    <div class="project-content">
      <slot />
    </div>

    <footer class="project-footer">
      <a href="/projects" class="back-link"><span class="prompt">$</span> cd ~/projects/</a>
    </footer>
  </article>
</Layout>

<style>
  .project-page {
    padding: 2rem 0;
  }

  .project-header {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-block;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
    color: currentColor;
    text-decoration: none;
    opacity: 0.7;
    margin-bottom: 1rem;
    transition: opacity 0.2s ease;
  }

  .back-link:hover {
    opacity: 1;
  }

  .prompt {
    color: #10b981;
    font-weight: 600;
  }

  .project-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0.5rem 0;
    line-height: 1.3;
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin: 1rem 0;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .meta-label {
    color: #10b981;
    font-weight: 500;
  }

  .meta-value {
    opacity: 0.85;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 0.5rem;
    margin-top: 1rem;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
  }

  .stack-label {
    color: #10b981;
    font-weight: 500;
  }

  .stack-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tech-badge {
    font-size: 0.7rem;
    opacity: 0.7;
    padding: 0.1rem 0.3rem;
    background: color-mix(in srgb, currentColor 5%, transparent);
    border-radius: 2px;
  }

  .project-content {
    border-top: 1px dotted color-mix(in srgb, currentColor 15%, transparent);
    padding-top: 2rem;
  }

  .project-content :global(h2) {
    font-family: "IBM Plex Mono", monospace;
    font-size: 1rem;
    font-weight: 600;
    color: #10b981;
    margin: 2rem 0 0.75rem 0;
  }

  .project-content :global(h2:first-child) {
    margin-top: 0;
  }

  .project-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .project-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .project-content :global(pre) {
    font-family: "IBM Plex Mono", monospace;
    background: color-mix(in srgb, currentColor 5%, transparent);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .project-content :global(code) {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.9em;
  }

  .project-footer {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px dotted color-mix(in srgb, currentColor 15%, transparent);
  }
</style>
